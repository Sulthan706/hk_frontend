<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".features.features_participants.training.ui.activity.HistoryTrainingScheduleActivity">

    <include
        android:id="@+id/appbarHistoryTrainingSchedule"
        layout="@layout/app_bar_training"/>

    <TextView
        android:id="@+id/tvMonthYearAttendanceReport"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        tools:text="month"
        android:textColor="@color/black2"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_collapseMode="parallax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout2"
        app:layout_constraintTop_toBottomOf="@id/appbarHistoryTrainingSchedule" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarHistoryTrainingSchedule">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_orange_dot" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Onsite"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black2"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/layout1"
        app:layout_constraintTop_toBottomOf="@id/appbarHistoryTrainingSchedule">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_blue_dot"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Online"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black2"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"/>
    </LinearLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/calenderDetailAttendanceReport"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="@dimen/_11ssp"
        app:compactCalendarBackgroundColor="@color/white"
        app:compactCalendarTextColor="@color/black2"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/softBlue1"
        app:compactCalendarCurrentDayBackgroundColor="@color/grey1"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarDisplayOtherMonthDays="true"
        app:layout_collapseMode="parallax"
        app:layout_constraintTop_toBottomOf="@id/tvMonthYearAttendanceReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/bg_disable"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"/>

    <View
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/calenderDetailAttendanceReport" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llCountReportCalenderRkb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout3">
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_rounded_purple"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training Mandiri"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvDailySummaryCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_blue5"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="@dimen/_9ssp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvOnlineSummaryCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_orange"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onsite"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvOnsiteSummaryCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/rvHistoryTrainingSchedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        tools:listitem="@layout/item_training_schedule"
        app:layout_constraintTop_toBottomOf="@+id/llCountReportCalenderRkb"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvEmptyHistoryTrainingSchedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/empty_history_training_schedule"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/calenderDetailAttendanceReport"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>