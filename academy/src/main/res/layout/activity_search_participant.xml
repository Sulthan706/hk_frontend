<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    tools:context=".features.features_trainer.myclass.ui.activity.SearchParticipantActivity">

    <ImageView
        android:id="@+id/ivBackSearchParticipant"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_arrow_back_dark_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/svSearchParticipant"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svSearchParticipant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:theme="@style/SearchViewTrainingGrey"
        android:background="@drawable/bg_rounded_grey9"
        app:iconifiedByDefault="false"
        app:queryHint="masukkan nama karyawan"
        app:searchIcon="@drawable/ic_search_gray_txt"
        app:searchHintIcon="@drawable/ic_search_gray_txt"
        app:closeIcon="@drawable/ic_closes_dark_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBackSearchParticipant" />

    <TextView
        android:id="@+id/tvSearchParticipant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Hasil Pencarian"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@id/ivBackSearchParticipant" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llDefaultSearchParticipant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvSearchParticipant"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/empty_search_keyword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:text="Masukkan nama karyawan di kolom pencarian terlebih dahulu"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsregular" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvEmptySearchParticipant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center"
        android:text="Maaf, nama yang Anda cari tidak ditemukan. Silahkan ulangi pencarian."
        android:textColor="@color/grayTxt"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tvSearchParticipant"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rvSearchParticipant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/list_participant"
        app:layout_constraintTop_toBottomOf="@id/tvSearchParticipant"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>