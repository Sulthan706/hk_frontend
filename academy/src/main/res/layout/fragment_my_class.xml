<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.features_trainer.homescreen.home.ui.fragment.MyClassFragment">

    <include
        android:id="@+id/appbarMyClass"
        layout="@layout/app_bar_search" />

    <RelativeLayout
        android:id="@+id/rlCalendarMyClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@drawable/bg_rounded_blue6"
        android:elevation="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/appbarMyClass">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Lihat Kalender"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsmedium"
            android:drawableStart="@drawable/ic_training_white"
            android:drawablePadding="@dimen/_4sdp" />

    </RelativeLayout>

    <View
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/rlCalendarMyClass" />

    <TextView
        android:visibility="visible"
        android:id="@+id/tvEmptyListMyClass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/empty_class"
        android:textColor="@color/grey5"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rvListMyClass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        tools:listitem="@layout/item_training_schedule"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateClassMyClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondary_color"
        android:layout_marginEnd="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_55sdp"
        android:tint="@color/secondary_color"
        app:tint="@color/white"
        app:srcCompat="@drawable/ic_create_doc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>