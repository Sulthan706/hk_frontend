<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeHomeTraining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_55sdp"
    tools:context=".features.features_participants.homescreen.home.ui.fragment.HomeTrainingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayoutHomeTraining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/_22sdp"
                android:paddingVertical="@dimen/_14sdp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:src="@drawable/logo_carefast_academy"/>

                <RelativeLayout
                    android:id="@+id/ivCareops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_toStartOf="@id/ivNotif"
                    android:background="@drawable/bg_circle_blue">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_careops" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ivNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_circle_blue"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_notif_training" />

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/ivNotifNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:src="@drawable/ic_notif_new"/>

                </RelativeLayout>

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_22sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:background="@drawable/bg_home_training"
                app:layout_constraintTop_toBottomOf="@id/layout1">

                <TextView
                    android:id="@+id/tvGreetingHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat error, "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsregular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvNameHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Error"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinssemibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvGreetingHomeTraining" />

                <TextView
                    android:id="@+id/tvNucJobHomeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Error | Error"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinssemibold"
                    app:layout_constraintTop_toBottomOf="@id/tvGreetingHomeTraining"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvStatusHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="Peserta Training"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="@drawable/bg_rounded_blue7"
                    app:layout_constraintTop_toBottomOf="@id/tvNucJobHomeTraining"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tvTrainerHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Ke Akun Trainer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsmedium"
                    android:drawableEnd="@drawable/ic_dropdown_white"
                    android:drawablePadding="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNucJobHomeTraining" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_22sdp"
                android:padding="@dimen/_12sdp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:background="@drawable/bg_field"
                app:layout_constraintTop_toBottomOf="@id/layout2">

                <LinearLayout
                    android:id="@+id/rlGradeHomeTraining"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_8sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_rounded_orange"
                    android:elevation="@dimen/_4sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGradeHomeTraining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/poppinssemibold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Grade"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSkillHomeTraining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/poppinssemibold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Skills Poin"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:id="@+id/btnSkillsHomeTraining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:text="Lihat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:background="@drawable/bg_rounded_blue8" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/grayLine"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSertifHomeTraining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/poppinssemibold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Sertifikat"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:id="@+id/btnSertifHomeTraining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:text="Lihat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:background="@drawable/bg_rounded_blue8" />

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:paddingHorizontal="@dimen/_22sdp"
                android:paddingVertical="@dimen/_18sdp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/layout3">

                <TextView
                    android:id="@+id/tvListClassHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar Kelas"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppinssemibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvSeeAllClassesHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textColor="@color/blue5"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinssemibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvEmptyClassesHomeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="Tidak ada jadwal kelas publik saat ini"
                    android:textAlignment="center"
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@drawable/bg_rounded_background"
                    app:layout_constraintTop_toBottomOf="@id/tvListClassHomeTraining" />

                <RelativeLayout
                    android:id="@+id/rlClassHomeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvListClassHomeTraining">

                    <include
                        android:visibility="visible"
                        android:id="@+id/layoutClassHomeTraining"
                        layout="@layout/item_training_schedule" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingHorizontal="@dimen/_22sdp"
                android:paddingVertical="@dimen/_18sdp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/layout4" >

                <TextView
                    android:id="@+id/tvTrainingScheduleHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jadwal Training"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppinssemibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvDateHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Error date"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsregular"
                    app:layout_constraintTop_toBottomOf="@id/tvTrainingScheduleHomeTraining"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvSeeAllScheduleHomeTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:text="Lihat Semua"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="@drawable/bg_rounded_blue6"
                    android:drawableStart="@drawable/ic_training_white"
                    android:drawablePadding="@dimen/_4sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvCountScheduleHomeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="Anda tidak memiliki jadwal training hari ini"
                    android:textColor="@color/red1"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@color/red3"
                    app:layout_constraintTop_toBottomOf="@id/tvDateHomeTraining" />

                <LinearLayout
                    android:id="@+id/llTimeTrainingHomeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:weightSum="2.5"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tvCountScheduleHomeTraining">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Jam"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinssemibold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Kelas"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinssemibold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_training_home"
                    app:layout_constraintTop_toBottomOf="@id/llTimeTrainingHomeTraining" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>