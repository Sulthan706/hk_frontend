<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_trainer.myclass.ui.activity.SelectInviteParticipantActivity">

    <include
        android:id="@+id/appbarSelectInviteParticipant"
        layout="@layout/app_bar_sub_title" />

    <LinearLayout
        android:id="@+id/llSelectedInviteParticipant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/appbarSelectInviteParticipant">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSelectedInviteParticipant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/tvCountSelectedInviteParticipant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Invite 0 Peserta"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsregular" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListInviteParticipant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"
        tools:listitem="@layout/list_participant"
        app:layout_constraintTop_toBottomOf="@id/llSelectedInviteParticipant" />

    <ImageView
        android:id="@+id/ivSelectInviteParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/ic_round_arrow_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tvInfoSelectInviteParticipant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:padding="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/info_txt_select_participant"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/bg_rounded_black2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivSelectInviteParticipant"
        app:layout_constraintEnd_toStartOf="@id/ivSelectInviteParticipant" />

</androidx.constraintlayout.widget.ConstraintLayout>