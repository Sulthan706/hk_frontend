<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue6"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/iv_appbar_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_back_white" />

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/SearchViewTraining"
        app:iconifiedByDefault="false"
        app:queryHint="Cari Topik Kelas"
        app:searchIcon="@drawable/ic_search_white"
        app:searchHintIcon="@drawable/ic_search_white"
        app:closeIcon="@drawable/ic_closes_white" />

</LinearLayout>