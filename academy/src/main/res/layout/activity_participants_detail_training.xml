<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_trainer.myclass.ui.activity.ParticipantsDetailTrainingActivity">

    <include
        android:id="@+id/appbarParticipantsDetailTraining"
        layout="@layout/app_bar_training" />

    <TextView
        android:id="@+id/tvStatusParticipantsDetailTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:text="PROFESIONAL"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:fontFamily="@font/poppinssemibold"
        android:background="@drawable/bg_second_color"
        app:layout_constraintTop_toBottomOf="@id/appbarParticipantsDetailTraining"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitleParticipantsDetailTraining"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="bottom"
        android:text="Error"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintTop_toBottomOf="@id/tvStatusParticipantsDetailTraining" />

    <TextView
        android:id="@+id/tv2ParticipantsDetailTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Training Untuk"
        android:textColor="@color/black2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tvTitleParticipantsDetailTraining"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTrainerParticipantsDetailTraining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="end"
        android:text="error"
        android:textColor="@color/black2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinssemibold"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleParticipantsDetailTraining"
        app:layout_constraintStart_toEndOf="@id/tv2ParticipantsDetailTraining" />

    <TextView
        android:id="@+id/tv3ParticipantsDetailTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Tanggal"
        android:textColor="@color/black2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tv2ParticipantsDetailTraining"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDateParticipantsDetailTraining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="end"
        android:text="error"
        android:textColor="@color/black2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinssemibold"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2ParticipantsDetailTraining"
        app:layout_constraintStart_toEndOf="@id/tv3ParticipantsDetailTraining" />

    <TextView
        android:id="@+id/tv4ParticipantsDetailTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Jam"
        android:textColor="@color/black2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tv3ParticipantsDetailTraining"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTimeParticipantsDetailTraining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="end"
        android:text="error"
        android:textColor="@color/black2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinssemibold"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3ParticipantsDetailTraining"
        app:layout_constraintStart_toEndOf="@id/tv4ParticipantsDetailTraining" />

    <View
        android:id="@+id/view1ParticipantsDetailTraining"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:background="@color/background"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/tv4ParticipantsDetailTraining" />

    <TextView
        android:id="@+id/tvListParticipantsDetailTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Daftar peserta training :"
        android:textColor="@color/black2"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1ParticipantsDetailTraining"/>

    <TextView
        android:visibility="visible"
        android:id="@+id/tvCountParticipantParticipantsDetailTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="0 Peserta"
        android:textColor="@color/black2"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1ParticipantsDetailTraining"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvParticipantsDetailTraining"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        tools:listitem="@layout/list_participant"
        app:layout_constraintTop_toBottomOf="@id/tvListParticipantsDetailTraining"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>