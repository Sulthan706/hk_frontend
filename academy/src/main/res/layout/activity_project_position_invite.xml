<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".features.features_trainer.myclass.ui.activity.ProjectPositionInviteActivity">

    <include
        android:id="@+id/appbarProjectPositionInvite"
        layout="@layout/app_bar_training_user_search" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1ProjectPositionInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:elevation="@dimen/_4sdp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/appbarProjectPositionInvite">

        <TextView
            android:visibility="visible"
            android:id="@+id/tvPilihProjectPositionInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Project"
            android:textColor="@color/black2"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/poppinssemibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/svProjectPositionInvite"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svProjectPositionInvite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ivSearchProjectPositionInvite"
            android:background="@drawable/bg_rounded_grey9"
            android:theme="@style/SearchViewTrainingGrey"
            android:visibility="invisible"
            app:closeIcon="@drawable/ic_closes_dark_grey"
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toStartOf="@id/ivSearchProjectPositionInvite"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="masukkan nama project"
            app:searchHintIcon="@drawable/ic_search_gray_txt"
            app:searchIcon="@drawable/ic_search_gray_txt" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivSearchProjectPositionInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_grey2client"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/svProjectPositionInvite"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProjectPositionInvite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        tools:listitem="@layout/item_list_selected"
        app:layout_constraintTop_toBottomOf="@id/layout1ProjectPositionInvite"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>