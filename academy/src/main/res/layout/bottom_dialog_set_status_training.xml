<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_dialog_background_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/layout1BottomDialogSetStatusTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/bottom_dialog_background_white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesaikan Kelas?"
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsmedium"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnYesBottomDialogSetStatusTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@drawable/bg_rounded_green2"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        android:text="Ya, Kelas sudah selesai"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@id/layout1BottomDialogSetStatusTraining"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNoBottomDialogSetStatusTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@drawable/bg_rounded_red1"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        android:text="Belum, Kembali ke detail kelas"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@id/btnYesBottomDialogSetStatusTraining"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/btnNoBottomDialogSetStatusTraining" />

</androidx.constraintlayout.widget.ConstraintLayout>