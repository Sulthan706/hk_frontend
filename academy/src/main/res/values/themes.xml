    <style name="SearchViewManagement" parent="Widget.AppCompat.SearchView">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="color">@color/black2</item>
        <item name="android:textColorHint">@color/graybtn</item>
        <item name="android:textColorPrimary">@color/black2</item>
        <item name="editTextColor">@color/black2</item>
        <item name="android:textColor">@color/black2</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

</resources>