 <resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
     <style name="Theme.CarefastOperation" parent="Theme.MaterialComponents.Light.NoActionBar">
         <!--        forced day light di dark mode-->
         <item name = "android:windowActionBar">false</item>
         <item name = "android:windowNoTitle">true</item>
         <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
         <!-- Primary brand color. -->
         <item name="colorPrimary">@color/primary_color</item>
         <item name="colorPrimaryVariant">@color/secondary_color</item>
         <item name="colorOnPrimary">@color/black</item>
         <!-- Secondary brand color. -->
         <item name="colorSecondary">@color/teal_200</item>
         <item name="colorSecondaryVariant">@color/teal_200</item>
         <item name="colorOnSecondary">@color/black</item>
         <!-- Status bar color. -->
         <item name="android:windowDrawsSystemBarBackgrounds">true</item>
         <item name="android:statusBarColor" >@color/primary_color</item>
         <!-- Customize your theme here. -->
         <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
     </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/paragraphText</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

     <style name="TabLayoutClientStyle" parent="TextAppearance.Design.Tab">
         <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
         <item name="textAllCaps">false</item>
         <item name="fontFamily">@font/poppinsbold</item>
         <item name="android:textColor">@color/black</item>
         <item name="singleLine">true</item>
         <item name="android:textSize">@dimen/paragraphText</item>
         <item name="colorAccent">@color/secondary_color</item>
     </style>

     <style name="SearchViewAppbar" parent="Widget.AppCompat.SearchView">
         <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
         <item name="textAllCaps">false</item>
         <item name="fontFamily">@font/poppinsregular</item>
         <item name="color">@color/white</item>
         <item name="android:textColorHint">@color/white</item>
         <item name="android:textColorPrimary">@color/white</item>
         <item name="editTextColor">@color/white</item>
         <item name="android:textColor">@color/white</item>
         <item name="singleLine">true</item>
         <item name="android:textSize">@dimen/_13ssp</item>
     </style>

     <style name="SearchViewAppbarGrey" parent="Widget.AppCompat.SearchView">
         <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
         <item name="textAllCaps">false</item>
         <item name="fontFamily">@font/poppinsregular</item>
         <item name="color">@color/grayTxt</item>
         <item name="android:textColorHint">@color/grayTxt</item>
         <item name="android:textColorPrimary">@color/grayTxt</item>
         <item name="editTextColor">@color/grayTxt</item>
         <item name="android:textColor">@color/grayTxt</item>
         <item name="singleLine">true</item>
         <item name="android:textSize">@dimen/_12ssp</item>
     </style>
     <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
         <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
         <item name="minHeight">@dimen/_32sdp</item>
         <item name="maxHeight">@dimen/_32sdp</item>
     </style>

 </resources>