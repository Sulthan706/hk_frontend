<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_30sdp"
    app:cardCornerRadius="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_20sdp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationSuccessRegisMekari"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_120sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/success_create_permission" />


        <TextView
            android:id="@+id/tvSuccessRegisMekari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berhasil Submit BAK Mesin"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/green1"
            android:fontFamily="@font/poppinssemibold"/>


        <TextView
            android:id="@+id/tvInfoBak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/dialog_bak"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackBakVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary_color"
            app:cornerRadius="8dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:paddingVertical="11dp"
            android:layout_marginTop="51dp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>