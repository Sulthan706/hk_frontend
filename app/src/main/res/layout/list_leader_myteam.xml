<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:background="@drawable/bg_white_card"
    android:elevation="@dimen/_4sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_statusLeaderMyTeam"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_status_history_complaint_secondary"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_statusLeaderMyTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_4sdp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_countBelumAbsen"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_countBelumAbsenLeaderMyTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:fontFamily="@font/poppinsregular"
            android:text="000"
            android:maxLength="3"
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tv_countEmployeeLeaderMyTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:text="000"
            android:maxLength="3"
            android:textAlignment="center"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_10ssp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_people_grey"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_imageLeaderMyteam"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/foto1" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/iv_imageLeaderMyteam"
        app:layout_constraintEnd_toStartOf="@id/ll_countBelumAbsen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nameLeaderMyTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="2"
            android:text="Error Name"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_jobLeaderMyTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error Job"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>