<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_shimmer"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_shimmer_cardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_shimmer"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_20sdp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/bg_shimmer"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_shimmer"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/neutral80"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_24sdp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_shimmer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_lihatDac"
            android:layout_marginTop="8dp"
            android:background="#DEDEDE" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>