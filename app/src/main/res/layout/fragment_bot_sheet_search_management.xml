<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">

    <View
        android:id="@+id/viewBotProject"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_bottomsheet_grey"
        android:layout_marginHorizontal="150dp"
        />
    <TextView
        android:id="@+id/tvTitleChooseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Pilih Nama Manager Area"
        android:textAlignment="textStart"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewBotProject"/>
    <!--    content-->


    <androidx.appcompat.widget.SearchView
        android:id="@+id/idSVManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:iconifiedByDefault="false"
        android:padding="1dp"
        android:background="@drawable/bg_field"
        android:queryHint="search management"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleChooseDate"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:layout_editor_absoluteX="10dp"
        tools:listitem="@layout/item_bot_sheet_listproject"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvEmtpyDataSearch"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Data kosong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idSVManagement"
        tools:layout_editor_absoluteX="23dp"
        android:fontFamily="@font/poppinsregular"
        android:textAlignment="center"
        android:visibility="visible"
        android:gravity="center"/>

</LinearLayout>