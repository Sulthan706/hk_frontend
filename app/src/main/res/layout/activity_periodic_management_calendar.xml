<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.monthlyworkreportmanagement.ui.activity.PeriodicManagementCalendarActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:background="@color/white"
            >
            <include
                android:id="@+id/appbarMonthlyWorkReportCalender"
                layout="@layout/app_bar_default"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="70dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSummaryRkbMgmnt"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_summary_orange"
                    app:iconTint="@color/primary_color"
                    android:text="Monitoring"
                    android:textColor="@color/primary_color"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFF1DC"
                    android:fontFamily="@font/poppinssemibold"
                    app:cornerRadius="6dp"
                    android:textSize="11sp"
                    android:elevation="@dimen/_2sdp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnListRkbs"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_notes_orange"
                    app:iconTint="@color/white"
                    android:backgroundTint="@color/primary_color"
                    android:text="Daftar Pekerjaan"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppinssemibold"
                    app:cornerRadius="6dp"
                    android:textSize="10sp"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginLeft="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="36dp"
                    android:layout_height="48dp"
                    app:icon="@drawable/ic_download_orange"
                    app:iconTint="@color/primary_color"
                    android:backgroundTint="#FFF1DC"
                    android:textColor="@color/primary_color"
                    android:visibility="invisible"
                    app:iconGravity="top"
                    app:cornerRadius="6dp"
                    android:textSize="10sp"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginHorizontal="24dp">
                <TextView
                    android:id="@+id/tvGetMonthNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="month"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    app:layout_collapseMode="parallax"/>
                <LinearLayout
                    android:id="@+id/llMonthlyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_purple_dot"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Monthly"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="11sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llWeeklyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintRight_toLeftOf="@+id/llMonthlyIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_orange_dot"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Weekly"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="11sp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                android:id="@+id/calenderRkbEvent"
                android:layout_width="fill_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_height="250dp"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextSize="12sp"
                app:compactCalendarBackgroundColor="@color/white"
                app:compactCalendarTextColor="@color/black"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/primary_color"
                app:compactCalendarCurrentDayBackgroundColor="@color/grey1"
                app:compactCalendarMultiEventIndicatorColor="#fff"
                android:layout_marginTop="160dp"
                android:layout_marginHorizontal="24dp"
                app:compactCalendarEventIndicatorStyle="small_indicator"
                app:compactCalendarDisplayOtherMonthDays="true"
                app:layout_collapseMode="parallax"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/bg_disable"
                android:layout_marginTop="190dp"
                android:layout_marginHorizontal="24dp"/>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:id="@+id/llCountReportCalenderRkb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_rounded_skyblue"
                android:paddingHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvDailySummaryCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_rounded_orange"
                android:paddingHorizontal="10dp"
                android:layout_marginLeft="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvWeeklySummaryCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_rounded_purple"
                android:paddingHorizontal="10dp"
                android:layout_marginLeft="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvMonthlySummaryCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"/>
            </RelativeLayout>


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rvPeriodic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_monthly_workreport_card"
            app:layout_constraintTop_toBottomOf="@+id/llCountReportCalenderRkb"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvEmtpyStateListJobsPeriodic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/llCountReportCalenderRkb"
            android:layout_marginTop="150dp"
            android:text="Tidak ada pekerjaan"
            android:gravity="center"
            android:visibility="visible"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabscrolltotop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_chevron_top_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:fab_colorNormal="@color/primary_color"
        android:visibility="gone"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
