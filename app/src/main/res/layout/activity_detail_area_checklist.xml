<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".features.features_vendor.homescreen.checklist.ui.new_.activity.DetailAreaChecklistActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/appbarDetailAreaChecklist"
            layout="@layout/app_bar_default"/>


    </com.google.android.material.appbar.MaterialToolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll1_detailAreaChecklist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Staff yang bertugas"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_card"
                    android:elevation="@dimen/_4sdp"
                    android:layout_margin="@dimen/_6sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_pengawasDetailAreaChecklist"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:src="@drawable/foto1"
                        app:civ_border_color="@android:color/darker_gray"
                        app:civ_border_width="@dimen/_1sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_pengawasDetailAreaChecklist">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pengawas :"
                            android:textColor="@color/blueTxtV2"
                            android:textSize="@dimen/_10ssp"
                            android:fontFamily="@font/poppinsmedium"/>

                        <TextView
                            android:id="@+id/tv_pengawasDetailAreaChecklist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Error pengawas"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppinsregular"/>

                    </LinearLayout>

                </RelativeLayout>

                <Spinner
                    android:id="@+id/spinnerOpsDetailAreaChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:elevation="@dimen/_4sdp"
                    android:background="@drawable/bg_spinner_white"
                    android:spinnerMode="dropdown"
                    android:entries="@array/noChoose"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_8sdp"/>

<!--                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner-->
<!--                    android:id="@+id/spinnerOpsDetailAreaChecklist"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_margin="@dimen/_6sdp"-->
<!--                    android:elevation="@dimen/_4sdp"-->
<!--                    android:background="@drawable/bg_spinner_white"-->
<!--                    android:spinnerMode="dropdown"-->
<!--                    android:entries="@array/noChoose"-->
<!--                    app:smsp_dropdownView="@dimen/_15sdp"-->
<!--                    app:smsp_arrowColor="@color/white"-->
<!--                    app:smsp_arrowPaddingLeft="@dimen/_1sdp"-->
<!--                    app:smsp_enableFloatingLabel="false"-->
<!--                    app:smsp_floatingLabelColor="@color/white"-->
<!--                    app:smsp_floatingLabelText="Operational"-->
<!--                    app:smsp_hint="Operational"-->
<!--                    app:smsp_hintColor="@color/blueTxtV2"-->
<!--                    app:smsp_hintSize="@dimen/_11ssp"-->
<!--                    app:smsp_isSearchable="false"-->
<!--                    app:smsp_itemColor="@color/grayTxt"-->
<!--                    app:smsp_itemListColor="@color/grayTxt"-->
<!--                    app:smsp_itemListHintBackgroundColor="#808080"-->
<!--                    app:smsp_itemListHintColor="@color/primary_color"-->
<!--                    app:smsp_multilineError="false"-->
<!--                    app:smsp_selectedItemListColor="@color/grayTxt"-->
<!--                    app:smsp_underlineColor="@color/white"/>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2_detailAreaChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@id/ll1_detailAreaChecklist">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kode Plotting"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/tv_codePlottingDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error Kode Plotting"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/neutral100"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Area"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/tv_areaDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error Area"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/neutral100"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sub Area"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/tv_subAreaDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error Sub Area"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/neutral100"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shift"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/tv_shiftDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error Shift"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/neutral100"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_penilaianDetailAreaChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/ll2_detailAreaChecklist">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="Penilaian Area"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/poppinsmedium"/>

                    <Spinner
                        android:id="@+id/spinnerPenilaianDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/noChoose"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:background="@drawable/bg_spinner_default"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Unggah Foto"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_penilaianDetailAreaChecklist"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="#DEDEDE"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/iv_penilaianDetailAreaChecklist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_camera_black" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Catatan"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_noteDetailAreaChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_64sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_22sdp"
                    android:hint="Berikan catatanmu di sini"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="2"
                    android:textColor="@color/neutral100"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@drawable/bg_field"
                    android:padding="@dimen/_8sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_detailAreaChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_primary"
                    android:text="Kirim Nilai"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textAllCaps="false"
                    android:layout_margin="@dimen/_6sdp"
                    android:elevation="@dimen/_4sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reviewDetailAreaChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/ll2_detailAreaChecklist">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dicek oleh"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/tv_checkByDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/neutral100"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Penilaian Object"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/tv_penilaianObjectDetailAreaChecklist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/neutral100"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto pengawas"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/grayTxt"
                        android:fontFamily="@font/poppinsmedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_reviewDetailAreaChecklist"
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="#DEDEDE"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iv_reviewDetailAreaChecklist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_error_image" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_noteReviewDetailAreaChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_64sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_22sdp"
                    android:text="Error catatan"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="2"
                    android:textColor="@color/neutral100"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@drawable/bg_field"
                    android:padding="@dimen/_8sdp"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>