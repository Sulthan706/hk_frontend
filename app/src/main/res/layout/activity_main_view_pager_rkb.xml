<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_client.monthlyworkreportclient.ui.activity.MainViewPagerRkbActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_city_client_rkb"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/llTitleMainViewPagerPeriodic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btnBackRkbClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_arrow_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rekap Kerja Bulanan"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="1dp"
        android:paddingHorizontal="7dp"
        android:background="@drawable/bg_rkb_client_blue"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/llTitleMainViewPagerPeriodic">

        <Button
            android:id="@+id/btnOverviewRkb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="Overview"
            android:textSize="10sp"
            android:fontFamily="@font/poppinssemibold"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="5dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/btnMonitoringRkb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="Monitoring"
            android:fontFamily="@font/poppinssemibold"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="5dp"
            android:textSize="10sp"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnListWorkRkb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="Daftar pekerjaan"
            android:fontFamily="@font/poppinssemibold"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="5dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>