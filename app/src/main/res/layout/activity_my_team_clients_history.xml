<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_client.myteam.ui.new_.activity.MyTeamClientsListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color"
        app:layout_constraintTop_toTopOf="parent">

    <include
        android:id="@+id/appbarHistoryComplaint"
        layout="@layout/app_bar_default_client" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/llMyTeamClientHistoryPeriode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/abl"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periode"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"/>
            <TextView
                android:id="@+id/tvDateMonthNowCfTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="November 2022"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/bg_field"
                android:padding="@dimen/_7sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llShiftCfteamSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_weight="1"/>
            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/spinnerShiftMyteam"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_spinner_no_padding"
                android:spinnerMode="dropdown"
                app:smsp_arrowColor="@color/white"
                app:smsp_arrowPaddingRight="@dimen/_2sdp"
                app:smsp_enableFloatingLabel="false"
                app:smsp_floatingLabelColor="@color/white"
                app:smsp_floatingLabelText="Pilih shift"
                app:smsp_hint="Pilih shift"
                app:smsp_hintColor="@color/graybtn"
                app:smsp_hintSize="@dimen/_11ssp"
                app:smsp_isSearchable="false"
                app:smsp_itemColor="@color/black2"
                app:smsp_itemListColor="@color/black2"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="@color/primary_color"
                app:smsp_multilineError="false"
                app:smsp_searchHeaderBackgroundColor="@color/primary_color"
                app:smsp_searchHeaderText="Cari sub area"
                app:smsp_searchTextColor="@color/black2"
                app:smsp_selectedItemListColor="@color/black2"
                app:smsp_underlineColor="@color/white" />


        </LinearLayout>
        

        
    </LinearLayout>
    <TextView
        android:id="@+id/tvEmptyStateListCfteam"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llMyTeamClientHistoryPeriode"
        android:text="Data tidak ditemukan"
        android:fontFamily="@font/poppinssemibold"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="visible"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListEmployeeCfteam"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/llMyTeamClientHistoryPeriode"
        android:paddingHorizontal="@dimen/_12sdp"
        tools:listitem="@layout/item_my_team_clients_employee"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>