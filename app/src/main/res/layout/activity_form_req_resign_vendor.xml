<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.service.resign.ui.activity.FormReqResignVendorActivity">

    <include
        android:id="@+id/appBarFormResign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/app_bar_default"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appBarFormResign">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llFormContentResign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_cf"
                android:layout_marginTop="26dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_resign_lightorange"
                android:layout_marginHorizontal="24dp"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/tvUserNameResign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Agriciasaduk"
                        android:fontFamily="@font/poppinssemibold"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tvUserNucJabatanResign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="DIC12345678 | CS-CLEANER"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"
                        android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_primary_rounded_1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"
                        android:text="Saya adalah karyawan di area"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvUserProjectResign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="MALL KOTA KASABLANKA" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Dengan ini, saya mengajukan pengunduran diri (resign) pada tanggal:"/>

            <RelativeLayout
                android:id="@+id/rlBtnDateResign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_field"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/tvDateSelectedResign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pilih tanggal resign"
                    android:padding="@dimen/_10sdp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_calendar_white"
                    app:tint="@color/gray_dark"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitResign"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:paddingVertical="10dp"
            android:text="Kirim Pengajuan"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:textAllCaps="false"
            app:backgroundTint="@color/secondary_color"
            app:layout_constraintTop_toBottomOf="@+id/llFormContentResign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="198dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>