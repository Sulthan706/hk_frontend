<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_field">
            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:paddingTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvPercentageProject"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="@dimen/_25sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MP"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvManpowerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="@dimen/_25sdp"/>
                </LinearLayout>

            </LinearLayout>



            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_down_grey"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <com.mackhartley.roundedprogressbar.RoundedProgressBar-->
<!--                android:id="@+id/ivLineGreen"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                android:paddingBottom="13dp"-->
<!--                app:rpbBackgroundColor="@color/grayLine"-->
<!--                app:rpbProgressColor="@color/green2"-->
<!--                app:rpbCornerRadius="@dimen/_12sdp"-->
<!--                app:rpbProgressTextColor="@color/white"-->
<!--                app:rpbTextPadding="@dimen/_12sdp"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/llContent"-->
<!--                />-->
            <com.mackhartley.roundedprogressbar.RoundedProgressBar
                android:id="@+id/progressBarCardlist"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:rpbBackgroundColor="@color/red"
                app:rpbCornerRadius="20dp"
                app:rpbProgressColor="#43AA8B"
                app:rpbShowProgressText="false"
                app:layout_constraintTop_toBottomOf="@+id/llContent"
                app:layout_constraintBottom_toTopOf="@+id/llContentDescription"
                android:layout_marginBottom="@dimen/_10sdp"/>
<!--            hide layout-->
            <LinearLayout
                android:id="@+id/llContentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/progressBarCardlist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Libur"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textColor="@color/grey2"/>
                    <TextView
                        android:id="@+id/tvHolidayCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="32dp"
                        android:textColor="@color/grey2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hadir"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textColor="@color/green2"/>
                    <TextView
                        android:id="@+id/tvPresentCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="32dp"
                        android:textColor="@color/green2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textColor="@color/red"/>
                    <TextView
                        android:id="@+id/tvNotPresentCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="32dp"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="14dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetailAbsent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat detail absensi"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_marginRight="6dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManajemen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daftar manajemen"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:backgroundTint="@color/secondary_color"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>