<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    tools:context=".features.features_vendor.homescreen.attendance_fix.ui.adapter.fab.FabHistoryAttendancePersonAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/rvMyTeamCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_field"
            android:padding="@dimen/_5sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivMyTeamEmployee"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/foto1"
                app:civ_border_color="@android:color/darker_gray"
                app:civ_border_width="@dimen/_1sdp"
                android:layout_margin="@dimen/_4sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp">
                <TextView
                    android:id="@+id/tvMyTeamEmployeeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama timku"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvMyTeamEmployeeCodeAndJobCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employeecode | jobcode"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kehadiran bulan ini :"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"
                        />
                    <TextView
                        android:id="@+id/tvMyTeamClientsHistoryMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15 Hari"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total jam kerja :"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvMyTeamClientsHistoryClock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="144 Jam"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>