<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/bg_field"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dicek pada"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="textStart"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13:26 WIB"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinsregular"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dicek oleh"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="textStart"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinsregular"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kondisi"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="textStart"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Standar"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinsregular"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_pick_photo_complaint"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/rounded_dark_gray"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_camera_black"
            android:visibility="visible"
            android:layout_gravity="end"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatn Pengawas"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak ada"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>