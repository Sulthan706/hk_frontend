<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clNotificationMidHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMainNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingTop="@dimen/_16sdp">

        <RelativeLayout
            android:id="@+id/rlStatusNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/tvDateStatusNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/10/2022, 08.00"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppinsregular"
                android:textSize="@dimen/_9ssp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rlStatusNews"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMainContentNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permohonanmu telah diproses"
                android:fontFamily="@font/poppinsregular"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="#363636"/>
            <TextView
                android:id="@+id/tvSecondMainContentNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diumumkan bahwa libur akhir tahun mulai dari 31 Des 2022 - 2 Jan 2023. Semua diharapkan aktif kembali pada .."
                android:fontFamily="@font/poppinsregular"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_10ssp"
                android:textColor="#363636"
                android:maxLines="2"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tvCaptionContentNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat selengkapnya"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_10ssp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_field_item_notif"
                app:layout_constraintTop_toBottomOf="@+id/tvCaptionContentNotif"
                android:layout_marginTop="@dimen/_4sdp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>