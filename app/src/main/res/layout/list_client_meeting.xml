<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_6sdp"
    android:paddingHorizontal="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_toStartOf="@id/ivListClientMeeting">

        <TextView
            android:id="@+id/tvNameListClientMeeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error name"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black2"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tvMailListClientMeeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error mail"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/grayTxt"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivListClientMeeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_uncheckbox"
        android:visibility="visible"
        android:tag="null"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>