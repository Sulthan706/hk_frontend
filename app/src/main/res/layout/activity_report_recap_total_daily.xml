<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.report.ui.activity.ReportRecapTotalDailyActivity">

    <include
        android:id="@+id/layout_appbar"
        layout="@layout/app_bar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <LinearLayout
        android:id="@+id/llPeriodeReportMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_appbar"
        android:weightSum="2"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvDateTodayRecap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:text="Semua Periode"
            android:textSize="12sp"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/tvProjectRecap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_field"
            android:fontFamily="@font/poppinsregular"
            android:padding="@dimen/_10sdp"
            android:text="Semua Project"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llTotalComplaintDailyRecap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llPeriodeReportMain"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_light_cream">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total komplain"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/primary_color"/>
        <TextView
            android:id="@+id/tvTotalComplaintRecap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/primary_color"
            android:textAlignment="textEnd"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListCardDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llTotalComplaintDailyRecap"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="14dp"
        tools:listitem="@layout/item_card_fold_recaptotal"/>


</androidx.constraintlayout.widget.ConstraintLayout>