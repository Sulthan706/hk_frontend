<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.attendance_fix.ui.activity.midlevel.new_.FabHistoryAttendanceTeamActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/layoutAppbarAttendanceOperator"
            layout="@layout/app_bar_default" />


    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/btnDateAndShift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp">

        <RelativeLayout
            android:id="@+id/rvBtnDateHistory"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_rectangle_blue_attendance">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDateHistory"
                                android:layout_marginLeft="@dimen/_14sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:text="Pilih tanggal"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rvChooseShift"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_rectangle_blue_attendance"
            android:layout_marginLeft="@dimen/_10sdp"
            >

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/spinner_choose_shift"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:smsp_arrowColor="@color/white"
                app:smsp_arrowPaddingBottom="@dimen/_5sdp"
                app:smsp_arrowPaddingLeft="@dimen/_1sdp"
                app:smsp_enableFloatingLabel="false"
                app:smsp_floatingLabelColor="@color/white"
                app:smsp_floatingLabelText="Pilih Shift"
                app:smsp_hint="Pilih Shift"
                app:smsp_hintColor="@color/white"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_isSearchable="true"
                app:smsp_itemColor="@color/white"
                app:smsp_itemListColor="@color/secondary_color"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="@color/primary_color"
                app:smsp_multilineError="false"
                app:smsp_searchHeaderText="Search Shift"
                app:smsp_searchTextColor="@color/primary_color"
                app:smsp_selectedItemListColor="@color/secondary_color" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHorizontalStatusAttendance"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginVertical="@dimen/_32ssp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDateAndShift"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:elevation="@dimen/_10ssp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_12ssp"
            android:paddingVertical="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAttendanceCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Hadir" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/bg_field"
            android:elevation="@dimen/_10ssp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_14ssp"
            android:paddingVertical="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAlpaCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Alpa" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/bg_field"
            android:elevation="@dimen/_10ssp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_18ssp"
            android:paddingVertical="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPermissionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Izin" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/bg_field"
            android:elevation="@dimen/_10ssp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_12ssp"
            android:paddingVertical="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvForgetAbsentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Lupa absen" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvNotesDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_23sdp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="@dimen/_12ssp"
        android:text="Laporan harian"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDateAndShift" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/rvHistoryAttendanceTeam"
        android:layout_marginHorizontal="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/llHorizontalStatusAttendance"
        tools:listitem="@layout/item_history_team_adapter"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/llTvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:text="Pilih tanggal dan shift terlebih dahulu untuk menampilkan laporan"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btnDateAndShift"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>