<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCardDamageReportVendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/llHeadDamageReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="18dp"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tvBAKCodeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="BAK/2024/02/0001"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvDateBakTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="15 Feb 2024"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llContentDamageDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/llHeadDamageReport"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merek"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:layout_weight="2.5"/>
            <TextView
                android:id="@+id/tvBrandBak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ABC"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTypeDamageReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/llContentDamageDesc"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:layout_weight="2.5"/>
            <TextView
                android:id="@+id/tvTypeBak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ABC"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:layout_weight="0.5"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbDisableUploadFotoDamageReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/grey3"
            android:fontFamily="@font/poppinssemibold"
            android:text="Upload Foto"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTypeDamageReport" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbUploadFotoDamageReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Foto"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTypeDamageReport"
            app:cornerRadius="8dp"
            android:fontFamily="@font/poppinssemibold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/secondary_color"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbFinishSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah submit"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTypeDamageReport"
            app:cornerRadius="8dp"
            android:fontFamily="@font/poppinssemibold"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:visibility="gone"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>