<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8"
    tools:context=".features.features_vendor.notifcation.ui.old.activity.NotificationTeamleadActivity">

    <include
        android:id="@+id/appbarNotificationTeamlead"
        layout="@layout/app_bar_default"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_notificationTeamlead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/appbarNotificationTeamlead" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerNotificationTeamlead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_22sdp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/appbarNotificationTeamlead">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/shimmer_placeholder_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/shimmer_placeholder_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>