<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.facerecog.ui.StatsVerifyRecogActivity">

    <include
        android:id="@+id/layout_appbar"
        layout="@layout/app_bar_default"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_appbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivLogoCarfast"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo_cf"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/imgProfileUser"
                android:layout_width="330dp"
                android:layout_height="380dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogoCarfast"
                android:visibility="invisible"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lootie"
                android:layout_width="190dp"
                android:layout_height="210dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogoCarfast"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Berhasil"
                android:textAlignment="center"
                android:textColor="#00BD8C"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgProfileUser" />

            <LinearLayout
                android:id="@+id/llNameDetailStatsVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvNotif"
                android:background="@drawable/bg_field"
                android:layout_marginHorizontal="24dp"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvNameUserVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="usernamea" />

                <TextView
                    android:id="@+id/tvIdProjectUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="0101029"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvCaptionAbsentVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda telah melakukan absen pada"
                android:textAlignment="center"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/llNameDetailStatsVerify"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tvDateVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="10 Juli 2023"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCaptionAbsentVerify"/>
            <TextView
                android:id="@+id/tvHourVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="06:44"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="#0E6EB8"
                android:textSize="28sp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDateVerify"/>
            <TextView
                android:id="@+id/tvTitleProjectVendorVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Di project:"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHourVerify"/>
            <TextView
                android:id="@+id/tvNameProjectVendorVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Land of dawn"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleProjectVendorVerify"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvMessageVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="06:44"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="#0E6EB8"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDateVerify"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTakaPhotoAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ambil ulang foto"
                app:layout_constraintTop_toBottomOf="@+id/tvMessageVerify"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="20dp"
                android:background="@color/smsp_transparent_color"
                android:textColor="@color/primary_color"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinssemibold"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>