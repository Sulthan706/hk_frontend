<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_420sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bg_custom_dialog"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_8sdp">

    <TextView
        android:id="@+id/tvDialogProjectAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Pilih Project"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/neutral100"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivCloseDialogProjectAttendance"/>

    <ImageView
        android:id="@+id/ivCloseDialogProjectAttendance"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_close_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDateDialogProjectAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="error"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/neutral100"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogProjectAttendance"/>

    <TextView
        android:id="@+id/tvSearchProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/bg_field"
        android:text="Cari nama project"
        android:textColor="@color/grayTxt"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/poppinsregular"
        android:drawableEnd="@drawable/ic_search_grey"
        app:layout_constraintTop_toBottomOf="@id/tvDateDialogProjectAttendance"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerListProjectAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_6sdp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tvSearchProject"
        app:layout_constraintBottom_toTopOf="@id/btnListProjectAttendance">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:orientation="vertical">

            <include
                layout="@layout/shimmer_placeholder_project_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/shimmer_placeholder_project_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_project_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_project_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListProjectAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_6sdp"
        tools:listitem="@layout/list_project"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSearchProject"
        app:layout_constraintBottom_toTopOf="@id/btnListProjectAttendance"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnListProjectAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="Pilih"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:background="@drawable/bg_primary"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnScheduleListProjectAttendance"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnScheduleListProjectAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp"
        android:text="Ubah Jadwal"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/primary_color"
        android:background="@drawable/bg_field_primary"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnListProjectAttendance"/>

    <TextView
        android:id="@+id/tvNoDataListProjectAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Tidak ada data."
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/grayTxt"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSearchProject"/>

</androidx.constraintlayout.widget.ConstraintLayout>