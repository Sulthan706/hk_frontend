<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDialog"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_late_3days"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsbold"
                android:text="Waduh, sepertinya ada yang ga beres nih"
                android:textAlignment="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvCaptionNotAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsmedium"
                tools:text="Admin pantau Anda sudah 3 hari berturut-turut TIDAK HADIR tanpa kabar. Yuk, tingkatkan terus kehadiranmu. Jangan sampai mempengaruhi performa kerjamu bulan ini ya."
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Perhatian:
Jika Anda masuk tetapi tidak melakukan absen masuk dan absen pulang, akan dianggap sebagai TIDAK HADIR. Pastikan melakukan absen saat berada di area."
                android:textAlignment="center"
                android:textSize="@dimen/_9ssp"
                android:textStyle="italic"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackGreetingMalam"
                android:backgroundTint="@color/red1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_9sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Oke, noted"
                app:cornerRadius="8dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinssemibold">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>