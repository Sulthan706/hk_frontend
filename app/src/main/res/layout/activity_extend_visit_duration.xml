<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.attendanceOSM.ui.activity.ExtendVisitDurationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/statusBarBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetEndWithActions="0dp">

            <include
                android:id="@+id/appbarExtendVisitDuration"
                layout="@layout/app_bar_default" />


        </com.google.android.material.appbar.MaterialToolbar>


        <LinearLayout
            android:id="@+id/llExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp"
            android:background="@color/primary_color"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppinsregular" />

            <TextView
                android:id="@+id/tvProjectExtendVisitDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ERROR"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinssemibold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv1ExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Kunjungan Tanggal"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintTop_toBottomOf="@id/llExtendVisitDuration" />

        <TextView
            android:id="@+id/tvDateExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:padding="@dimen/_8sdp"
            android:text="Error"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/bg_field_disable"
            app:layout_constraintTop_toBottomOf="@id/tv1ExtendVisitDuration" />

        <TextView
            android:id="@+id/tv2ExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Diperpanjang Hingga"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintTop_toBottomOf="@id/tvDateExtendVisitDuration" />

        <LinearLayout
            android:id="@+id/ll2ExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:weightSum="2.5"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv2ExtendVisitDuration">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDurationExtendVisitDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_8sdp"
                android:hint="input menit"
                android:textColor="@color/black2"
                android:textSize="@dimen/_12ssp"
                android:inputType="number"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/bg_field" />

<!--            <TextView-->
<!--                android:id="@+id/tvTimeExtendVisitDuration"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1.5"-->
<!--                android:padding="@dimen/_8sdp"-->
<!--                android:text="&#45;&#45;:&#45;&#45;"-->
<!--                android:textColor="@color/grayTxt"-->
<!--                android:textSize="@dimen/_12ssp"-->
<!--                android:fontFamily="@font/poppinsregular"-->
<!--                android:background="@drawable/bg_field"-->
<!--                android:drawableEnd="@drawable/ic_time"/>-->

            <TextView
                android:id="@+id/tvDurationExtendVisitDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="menit hingga jam --:--"
                android:textColor="@color/black2"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinssemibold"/>

        </LinearLayout>

        <View
            android:id="@+id/view1ExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:background="@color/background"
            app:layout_constraintTop_toBottomOf="@id/ll2ExtendVisitDuration"/>

        <TextView
            android:id="@+id/tv3ExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Alasan"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintTop_toBottomOf="@id/view1ExtendVisitDuration" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etReasonExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_field"
            android:fontFamily="@font/poppinsregular"
            android:gravity="start"
            android:hint="contoh: saya harus menyelesaikan pekerjaan tambahan"
            android:maxLength="720"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@id/tv3ExtendVisitDuration"
            tools:layout_editor_absoluteX="51dp" />

        <View
            android:id="@+id/view2ExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@color/background"
            app:layout_constraintTop_toBottomOf="@id/etReasonExtendVisitDuration"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            android:background="@drawable/bg_disable"
            app:layout_constraintTop_toBottomOf="@+id/view2ExtendVisitDuration"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            app:layout_constraintTop_toBottomOf="@+id/btnSubmitExtendVisitDuration"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>