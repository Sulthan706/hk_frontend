<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.report.ui.activity.DetailAttendanceReportActivity">

    <include
        android:id="@+id/appbarDetailAttendanceReport"
        layout="@layout/app_bar_default"/>

    <TextView
        android:id="@+id/tvMonthYearAttendanceReport"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_22sdp"
        tools:text="month"
        android:textColor="@color/black2"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_collapseMode="parallax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout2"
        app:layout_constraintTop_toBottomOf="@id/appbarDetailAttendanceReport" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarDetailAttendanceReport">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_purple_dot" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lembur Ganti"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black2"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/layout1"
        app:layout_constraintTop_toBottomOf="@id/appbarDetailAttendanceReport">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_orange_dot"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tidak Hadir"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black2"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"/>
    </LinearLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/calenderDetailAttendanceReport"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="@dimen/_11ssp"
        app:compactCalendarBackgroundColor="@color/white"
        app:compactCalendarTextColor="@color/black2"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/primarySoft4"
        app:compactCalendarCurrentDayBackgroundColor="@color/grey1"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarDisplayOtherMonthDays="true"
        app:layout_collapseMode="parallax"
        app:layout_constraintTop_toBottomOf="@id/tvMonthYearAttendanceReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/bg_disable"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"/>

    <View
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/calenderDetailAttendanceReport"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Report Harian"
        android:textAlignment="center"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@id/layout3"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:text="Tanggal"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:text="Jam kerja"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:text="Kehadiran"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_34sdp"
        android:text="Absen masuk"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text4" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_34sdp"
        android:text="Absen pulang"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text5" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:text="Lembur"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text6" />

    <TextView
        android:id="@+id/tvShiftLemburGanti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_34sdp"
        android:text="Lembur ganti : -"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text7" />

    <TextView
        android:id="@+id/tvShiftLemburTagih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_34sdp"
        android:text="Lembur tagih : -"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShiftLemburGanti" />

    <TextView
        android:id="@+id/tvDateDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text2"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <TextView
        android:id="@+id/tvWorkTimeDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/tvDateDailyReport" />

    <TextView
        android:id="@+id/tvAttendanceDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text4"
        app:layout_constraintTop_toBottomOf="@id/tvWorkTimeDailyReport" />

    <TextView
        android:id="@+id/tvAttendancIneDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text5"
        app:layout_constraintTop_toBottomOf="@id/tvAttendanceDailyReport" />

    <TextView
        android:id="@+id/tvAttendancOuteDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text6"
        app:layout_constraintTop_toBottomOf="@id/tvAttendancIneDailyReport" />

    <TextView
        android:id="@+id/tvLemburGantiDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvShiftLemburGanti"
        app:layout_constraintTop_toBottomOf="@id/text7" />

    <TextView
        android:id="@+id/tvLemburTagihDailyReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvShiftLemburTagih"
        app:layout_constraintTop_toBottomOf="@id/tvLemburGantiDailyReport" />


</androidx.constraintlayout.widget.ConstraintLayout>