<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:elevation="@dimen/_4sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_operationalItemSpinnerOperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp"
        android:text="Operational"
        android:textColor="@color/blueTxtV2"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinsmedium"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_8sdp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_itemSpinnerOperator"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_8sdp"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/foto1" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/iv_itemSpinnerOperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nameItemSpinnerOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="2"
            android:text="Error Name"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_nucItemSpinnerOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Error Nuc"
            android:textColor="@color/blueTxtV2"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>