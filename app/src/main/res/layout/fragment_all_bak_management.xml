<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerAllBakManagement"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.features_management.damagereport.ui.fragment.AllBakManagementFragment">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerListBak"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/shimmer_list_bak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/shimmer_list_bak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <include
                layout="@layout/shimmer_list_bak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <include
                layout="@layout/shimmer_list_bak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />
            <include
                layout="@layout/shimmer_list_bak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />


        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDamageReportManagement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_list_damage_report_management"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvEmptyListBakManagement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tidak ada data"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>