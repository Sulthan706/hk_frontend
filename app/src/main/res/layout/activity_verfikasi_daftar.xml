<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.auth.register.ui.activity.VerfikasiDaftarActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/primary_color"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:id="@+id/iv_backDaftarVerif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/iv_backDaftarVerif"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_vertical"
                android:text="Verifikasi"
                android:textColor="@color/white"
                android:textSize="@dimen/h5" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Verifikasi"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/h4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/daftar_verif"
            android:textColor="@color/neutral80"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_emailDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/error_email"
            android:textColor="@color/secondary_color"
            android:textSize="@dimen/h5" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_verif_otp_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_forgot2">

            <EditText
                android:id="@+id/et_otp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/primary_color"
                tools:text="0" />

            <EditText
                android:id="@+id/et_otp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/primary_color"
                tools:text="0" />

            <EditText
                android:id="@+id/et_otp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/primary_color"
                tools:text="0" />

            <EditText
                android:id="@+id/et_otp4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/primary_color"
                tools:text="0" />

            <EditText
                android:id="@+id/et_otp5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/primary_color"
                tools:text="0" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nextVerifDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_rounded_primary"
            android:elevation="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:paddingVertical="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/bodyText" />

        <TextView
            android:id="@+id/tv_cdVerifCodeDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsregular"
            android:text=". . . s Resend Code"
            android:textColor="@color/neutral80"
            android:textSize="@dimen/paragraphText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>