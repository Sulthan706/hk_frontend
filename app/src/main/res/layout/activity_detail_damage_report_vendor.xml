<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.damagereport.ui.activity.DetailDamageReportManagementActivity">

    <include
        android:id="@+id/appbarDetailDamageReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/app_bar_default"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarDetailDamageReport"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <LinearLayout
                android:id="@+id/llDetailHeadDamageReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="32dp">

                <TextView
                    android:id="@+id/tvNumberBAK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="BAK/2024/02/0001"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvDateBAK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="15 Feb 2024"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:id="@+id/vwHeadContentDamageReportManagement"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/llDetailHeadDamageReport"/>
            <LinearLayout
                android:id="@+id/llDetailInfoDamageReoort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement"
                android:orientation="vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Mesin"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kode"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tvEngineCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CF1MSNLOW_00001"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Merek"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tvBrandEngine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CF1MSNLOW_00001"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tvTypeEngine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CF1MSNLOW_00001"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>



            </LinearLayout>

            <View
                android:id="@+id/vwHeadContentDamageReportManagement3"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/llDetailInfoDamageReoort"/>

            <TextView
                android:id="@+id/tvImageProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload foto kerusakan"
                app:layout_constraintTop_toBottomOf="@id/vwHeadContentDamageReportManagement3"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/llImageProgressContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvImageProgress"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="24dp">

                <RelativeLayout
                    android:id="@+id/rlFrontImageBak"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_field_dotted_red">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:src="@drawable/ic_camera_fill"
                        android:backgroundTint="@color/red1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tampak Depan"
                        android:fontFamily="@font/poppinssemibold"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="@color/red1"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="60dp"/>
                </RelativeLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mvFrontImageBak"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivUploadBak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_error_image"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/keterangan" />
                    <ProgressBar
                        android:id="@+id/progreesBarUpload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"/>
                    <ImageButton
                        android:id="@+id/ivReplaceImageUploadBak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_replace_image_light_blue"
                        android:background="@null"
                        android:layout_margin="5dp"
                        android:visibility="invisible"/>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <TextView
                android:id="@+id/tvSummaryDamageReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan kerusakan"
                app:layout_constraintTop_toBottomOf="@id/llImageProgressContent"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="22dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etSummaryResultDamageReport"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:hint="Beri keterangan kerusakan"
                app:hintAnimationEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tvSummaryDamageReport">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvInputFinishDamageReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:fontFamily="@font/poppinsregular"/>

            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:id="@+id/vwHeadContentDamageReportManagement4"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="20dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/etSummaryResultDamageReport"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisableBak"
                android:layout_width="366dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:cornerRadius="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:backgroundTint="@color/gray"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/btnSubmitBak"
                android:layout_width="366dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:cornerRadius="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>