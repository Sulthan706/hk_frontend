<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.report.ui.activity.ReportCfTalkActivity">

            <LinearLayout
                android:id="@+id/llPeriodeReportMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/layout_appbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvStatsPercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Kehadiran 100%"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvGetDateNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_transparent_notif_mid"
                        android:fontFamily="@font/poppinsregular"
                        android:padding="4dp"
                        android:text="26 Januari 2023"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvStatsReportDaily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Semua Periode"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        <TextView
            android:id="@+id/tvLocationBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Jakarta"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/llPeriodeReportMain"
            android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/tvProjectTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="33 Project"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@id/llPeriodeReportMain" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReportAbsent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProjectTotal"
                tools:listitem="@layout/item_list_card_project"
                android:layout_marginBottom="@dimen/_12sdp"/>

            <include
                android:id="@+id/layout_appbar"
                layout="@layout/app_bar_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>