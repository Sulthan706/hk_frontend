<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.monthlyworkreportmanagement.ui.activity.PeriodicManagementHomeActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/appbarListShiftChecklistMgmnt"
            layout="@layout/app_bar_default"/>


    </com.google.android.material.appbar.MaterialToolbar>


    <RelativeLayout
        android:id="@+id/rlMonthListShiftChecklist"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@drawable/bg_month_list_shift_checklist">
        <TextView
            android:id="@+id/tvMonthNowListChecklistMngmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juli1997"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/rlMonthListShiftChecklist">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llSummaryCardShiftChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="16dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="42dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2faff">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_summary_card_list_checklist"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:paddingVertical="@dimen/_8sdp"
                                android:background="@drawable/bg_list_summary_list_checklist">

                                <TextView
                                    android:id="@+id/tv1_shimmerShiftChecklist"
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:maxLines="1"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textColor="@color/secondary_color"
                                    android:textSize="15sp"
                                    android:text="Target bulan ini"/>

                                <TextView
                                    android:id="@+id/tvTotalWorkMonthly"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:maxLines="1"
                                    tools:text="34 Pekerjaan"
                                    android:textSize="15sp"
                                    android:textColor="@color/secondary_color"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:layout_alignParentEnd="true"
                                    android:textAlignment="textEnd"/>

                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Realisasi"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="10dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RelativeLayout
                                        android:id="@+id/rl_progressDetailAbsentProjectMgmnt"
                                        android:layout_width="@dimen/_75sdp"
                                        android:layout_height="@dimen/_75sdp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:layout_gravity="center"
                                        >

                                        <TextView
                                            android:id="@+id/tvTotalPercentage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            tools:text="total"
                                            android:gravity="center"
                                            android:fontFamily="@font/poppinsregular"
                                            android:textSize="12sp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginTop="10dp"/>
                                        <ir.mahozad.android.PieChart
                                            android:id="@+id/pieChart"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:labelsSize="10sp"
                                            app:centerLabelSize="10sp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginEnd="10dp"/>

                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1"
                                        >
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Daily"
                                            android:fontFamily= "@font/poppinssemibold"
                                            android:textColor="#2D9CDB"
                                            android:textSize="14sp"
                                            android:layout_marginTop="5dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Weekly"
                                            android:fontFamily="@font/poppinssemibold"
                                            android:textColor="#F47721"
                                            android:textSize="14sp"
                                            android:layout_marginTop="22dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Monthly"
                                            android:fontFamily="@font/poppinssemibold"
                                            android:textColor="#9B51E0"
                                            android:textSize="14sp"
                                            android:layout_marginTop="22dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_field"
                                            android:padding="4dp">
                                            <TextView
                                                android:id="@+id/tvDailyWorkMonthly"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinssemibold"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                android:gravity="center"
                                                tools:text="18 / 21"/>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_field"
                                            android:padding="4dp"
                                            android:layout_marginTop="12dp">
                                            <TextView
                                                android:id="@+id/tvWeeklyWorkMonthly"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinssemibold"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                android:gravity="center"
                                                tools:text="18 / 20"/>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_field"
                                            android:padding="4dp"
                                            android:layout_marginTop="12dp">
                                            <TextView
                                                android:id="@+id/tvMonthlyWorkMonthly"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinssemibold"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                android:gravity="center"
                                                tools:text="- / 20"/>
                                        </RelativeLayout>


                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pekerjaan dialihkan"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="10dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3.5">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1.2"
                                        >
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Weekly"
                                            android:fontFamily="@font/poppinsregular"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"
                                            android:layout_marginTop="5dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Monthly"
                                            android:fontFamily="@font/poppinsregular"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"
                                            android:layout_marginTop="22dp"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="2.3">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_field"
                                            android:padding="4dp">
                                            <TextView
                                                android:id="@+id/tvWeeklyBaMonthly"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinssemibold"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                android:gravity="center"
                                                tools:text="18 / 21"/>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_field"
                                            android:padding="4dp"
                                            android:layout_marginTop="12dp">
                                            <TextView
                                                android:id="@+id/tvMonthlyBaMonthly"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinssemibold"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                android:gravity="center"
                                                tools:text="18 / 20"/>
                                        </RelativeLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnWorkDetail"
                                    android:layout_width="300dp"
                                    android:layout_height="50dp"
                                    android:text="Lihat Daftar Pekerjaan"
                                    android:layout_marginTop="34dp"
                                    android:layout_marginBottom="24dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAllCaps="false"
                                    android:backgroundTint="@color/secondary_color"
                                    app:cornerRadius="9dp"/>


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/closing_shift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f2faff"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_target_daily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_margin="@dimen/_10sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"
                                android:maxLines="1"
                                android:layout_weight="1"

                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/secondary_color"
                                android:textSize="15sp"
                                android:text="Target Harian"/>

                            <TextView
                                android:id="@+id/tv_date_dailyt_target"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"
                                android:maxLines="1"
                                android:layout_weight="1"
                                tools:text="34 Pekerjaan"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_color"
                                android:fontFamily="@font/poppinssemibold"
                                android:layout_alignParentEnd="true"
                                android:textAlignment="textEnd"/>


                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_daily_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:listitem="@layout/list_item_daily_target"
                            tools:itemCount="2"/>

                        <LinearLayout
                            android:id="@+id/linear_loading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center_horizontal">

                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_result_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:background="#f2faff"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/llSummaryCardShiftChecklist">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2faff"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:maxLines="1"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/secondary_color"
                            android:textSize="15sp"
                            android:text="Laporan Ke Klien"/>

                        <TextView
                            android:id="@+id/tv_last_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_area_assignment"
                            android:textColor="@color/black2"
                            android:fontFamily="@font/poppinsregular"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/bg_blue_rounded"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/text_create_and_send"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listShiftChecklist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/card_result_send"
                tools:listitem="@layout/list_shift_checklist"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:background="@drawable/rounded_shape"
        android:fontFamily="@font/poppinsregular"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>