<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.inspeksi.mainInspeksi.ui.activity.ListKontrolAreaActivity">

    <include
        android:id="@+id/appbarListKontrolArea"
        layout="@layout/app_bar_default"/>

    <LinearLayout
        android:id="@+id/ll1ListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="1.7"
        app:layout_constraintTop_toBottomOf="@id/appbarListKontrolArea">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Tanggal"
            android:textColor="@color/grey2_client"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsmedium"/>

        <TextView
            android:id="@+id/tvDateListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_field"
            android:text="Error date"
            android:textColor="@color/grey2"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsregular"
            android:drawableEnd="@drawable/ic_calendar_orange"
            tools:ignore="UseCompatTextViewDrawableXml" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2ListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="1.7"
        app:layout_constraintTop_toBottomOf="@id/ll1ListKontrolArea">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Tujuan Kunjungan"
            android:textColor="@color/grey2_client"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsmedium"/>

        <Spinner
            android:id="@+id/spinnerListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/bg_spinner"
            android:entries="@array/tujuanKunjungan"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvEmptyListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center"
        android:text="Anda belum membuat laporan kontrol area hari ini. Silakan membuat laporan dengan klik tombol di bawah."
        android:textColor="@color/grayTxt"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppinsregular"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ll2ListKontrolArea"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:visibility="gone"
        tools:listitem="@layout/list_kontrol_area_inspeksi"
        app:layout_constraintTop_toBottomOf="@id/ll2ListKontrolArea"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ivCreateListKontrolArea"
        android:layout_width="@dimen/_62sdp"
        android:layout_height="@dimen/_62sdp"
        android:layout_margin="@dimen/_12sdp"
        android:src="@drawable/ic_create_white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>