<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp">

    <TextView
        android:id="@+id/tvAreaListKondisiAreaInspeksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Error area"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvObjectListKondisiAreaInspeksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:text="Error object"
        android:textColor="@color/black2"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvAreaListKondisiAreaInspeksi" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPreviewListKondisiAreaInspeksi"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:backgroundTint="@color/grayLine"
        app:cardCornerRadius="@dimen/_6sdp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tvObjectListKondisiAreaInspeksi"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivPreviewDialogLaporanAreaInspeksi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:src="@drawable/ic_error_image" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/ll1ListKondisiAreaInspeksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardPreviewListKondisiAreaInspeksi"
        app:layout_constraintTop_toBottomOf="@id/tvAreaListKondisiAreaInspeksi">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerListKondisiAreaInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/bg_spinner"
            android:entries="@array/penilaianInspeksi"
            android:spinnerMode="dropdown"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvPenilaianListKondisiAreaInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/bg_field"
            android:fontFamily="@font/poppinsregular"
            android:text="Error penilaian"
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvScoreListKondisiAreaInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:fontFamily="@font/poppinssemibold"
            android:text="-"
            android:textColor="@color/black2"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2ListKondisiAreaInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:orientation="horizontal"
        android:weightSum="1.5"
        app:layout_constraintTop_toBottomOf="@id/cardPreviewListKondisiAreaInspeksi">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/poppinsregular"
            android:text="To do action"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tvActionListKondisiAreaInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:fontFamily="@font/poppinsregular"
            android:text=": -"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3ListKondisiAreaInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:orientation="horizontal"
        android:weightSum="1.5"
        app:layout_constraintTop_toBottomOf="@id/ll2ListKondisiAreaInspeksi">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/poppinsregular"
            android:text="Tindakan"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tvTindakanListKondisiAreaInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:fontFamily="@font/poppinsregular"
            android:text=": -"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4ListKondisiAreaInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:orientation="horizontal"
        android:weightSum="1.5"
        app:layout_constraintTop_toBottomOf="@id/ll3ListKondisiAreaInspeksi">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/poppinsregular"
            android:text="Keterangan tambahan"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tvNoteListKondisiAreaInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:fontFamily="@font/poppinsregular"
            android:text=": -"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/grayLine"
        app:layout_constraintTop_toBottomOf="@id/ll4ListKondisiAreaInspeksi"/>

</androidx.constraintlayout.widget.ConstraintLayout>