<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.features_vendor.service.changeSchedule.ui.teamlead.activity.DetailChangeScheduleTlActivity">

    <include
        android:id="@+id/appbar_detail_change_schedule_teamlead"
        layout="@layout/app_bar_default" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Judul tuker jadwal"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_white_card"
                android:elevation="@dimen/_4sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/tv1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dateFrom_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:fontFamily="@font/poppinsregular"
                        android:text="Erro date"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tv_shiftFrom_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error shift"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tv_areaFrom_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error area"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tv_subAreaFrom_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error subarea"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dateTo_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="end"
                        android:text="Error date"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tv_shiftTo_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="end"
                        android:text="Error shift"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tv_areaTo_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="end"
                        android:text="Error area"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tv_subAreaTo_change_schedule_teamlead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="end"
                        android:text="Error subarea"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Permohonan Tuker Jadwal"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@id/ll1" />

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_white_card"
                android:elevation="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv2">

                <ImageView
                    android:id="@+id/iv_requestChangeScheduleTeamlead"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:src="@drawable/foto1" />

                <TextView
                    android:id="@+id/tv_requestChangeScheduleTeamlead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toEndOf="@id/iv_requestChangeScheduleTeamlead"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Error Nama"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Digantikan Oleh"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@id/rl1" />

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_white_card"
                android:elevation="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv3">

                <ImageView
                    android:id="@+id/iv_replaceChangeScheduleTeamlead"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:src="@drawable/foto1" />

                <TextView
                    android:id="@+id/tv_replaceChangeScheduleTeamlead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toEndOf="@id/iv_replaceChangeScheduleTeamlead"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Error Nama"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Alasan izin"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@id/rl2" />

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_white_card"
                android:elevation="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv4">

                <TextView
                    android:id="@+id/tv_descChangeScheduleTeamlead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="3"
                    android:text="Error"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_button_change_schedule_teamlead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/rl3">

                <TextView
                    android:id="@+id/tv_tolak_change_schedule_teamlead"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_tolak"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="Tolak"
                    android:textColor="#969696"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_izinkan_change_schedule_teamlead"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_izinkan"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="Izinkan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_status_change_schedule_teamlead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_ditolak"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:paddingVertical="@dimen/_2sdp"
                android:text="Permohonan di . . ."
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/rl3" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/ll_button_change_schedule_teamlead" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>