<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_operational_secondary"
    tools:context=".features.features_vendor.homescreen.home.ui.old.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp">

        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/img_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_my_team_client_telp"
                />
        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_title">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:civ_border_color="@android:color/darker_gray"
                app:civ_border_width="@dimen/_2sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/profile_ic" />

            <LinearLayout
                android:id="@+id/ll_subtract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/subtract_profile"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_name_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Name Unknown"
                    android:textColor="#0A0A0A"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_job_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Job Position Unknown"
                    android:textColor="#2B5281"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_nuc_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="NUC Unknown"
                    android:textColor="#969696"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tv_project_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Project Name Unknown"
                    android:textColor="#2B5281"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Aktivitas saya"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_subtract" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_rectangle_elevation"
                android:drawableLeft="@drawable/ic_baseline_warning_24"
                android:drawablePadding="@dimen/_7sdp"
                android:fontFamily="@font/poppinsmedium"
                android:padding="@dimen/_20sdp"
                android:text="Fitur belum tersedia . . ."
                android:textColor="#969696"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_act" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shimmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_title">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_foto_profile"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_shimmer" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:id="@+id/llTitleProfileMyTeamClients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_38sdp"
                android:background="@drawable/subtract_profile"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">



                <TextView
                    android:id="@+id/tvMngmntNameCfteam"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="employee"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinsbold"/>




                <TextView
                    android:id="@+id/tvMngmntJobNameCfteam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="job Name"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinssemibold"/>





                <TextView
                    android:id="@+id/tvMngmntJobCodeCfteam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nuc"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsregular"/>








            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlMonthMyTeamClients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/llTitleProfileMyTeamClients"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView
                    android:id="@+id/tvDateMonthDetailEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="November"
                    android:textAlignment="center" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llCountScheduleMyteam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rlMonthMyTeamClients"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jadwal Libur"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#B9B9B9"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvCountDayScheduleOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4 Hari"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#B9B9B9"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jadwal Masuk"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#607080"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvCountDayScheduleIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="26 Hari"
                        android:textAlignment="textEnd"
                        android:textColor="#607080"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlTotalCountMyTeamsClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/llCountScheduleMyteam"
                android:background="@drawable/bg_field"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
               >

                <LinearLayout
                    android:id="@+id/llTotalCountScheduleMyteam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/tvHadirCountProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="16"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hadir"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_8sdp">
                        <TextView
                            android:id="@+id/tvCountDayScheduleAlpha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="@dimen/_14sdp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alpa"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_8sdp">
                        <TextView
                            android:id="@+id/tvCountDaySchedulePermission"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="@dimen/_14sdp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="izin"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_2sdp">
                    <TextView
                        android:id="@+id/tvCountDayScheduleChangeOvertime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14sdp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="2"
                        android:text="Lembur Ganti"
                        android:textAlignment="center"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <ProgressBar
                            android:id="@+id/progressBarDetailCfteam"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/circular_bar_progress"
                            tools:progress="0" />

                        <TextView
                            android:id="@+id/tv_progressBarDetailCfteam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="0 / 0"
                            android:textAlignment="center"
                            android:textColor="@color/secondary_color"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llBtnHistoryAttendanceEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rlTotalCountMyTeamsClient"
                android:background="@drawable/bg_secondary"
                android:padding="@dimen/_8sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_cfteam_clients"
                    android:padding="@dimen/_2sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat riwayat kehadiran"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>