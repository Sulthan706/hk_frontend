<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_18sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_74sdp"
                android:src="@drawable/carefast_update"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="New Update Available"
                android:textAlignment="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/grayBold"
                android:fontFamily="@font/poppinssemibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/new_update_info"
                android:textAlignment="center"
                android:textColor="@color/grayTxt"
                android:textSize="@dimen/_10ssp"/>

            <TextView
                android:id="@+id/tvDialogUpdateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="versi terbaru 0.0.0"
                android:textAlignment="center"
                android:textColor="@color/blueInfo"
                android:textSize="@dimen/_10ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDialogUpdateApp"
                android:layout_width="@dimen/_156sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Update sekarang"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/bg_secondary"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>