<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_listOperationalChecklist"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:background="@drawable/bg_white_card"
    android:elevation="@dimen/_6sdp"
    android:padding="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_listOperationalChecklist"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_listOperationalChecklist"
        android:src="@drawable/foto1"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="@dimen/_1sdp"/>

    <LinearLayout
        android:id="@+id/ll_listOperationalChecklist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_listOperationalChecklist"
        app:layout_constraintEnd_toStartOf="@id/iv_checkListOperationalChecklist"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nameListOperationalChecklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error name"
            android:maxLines="2"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_areaListOperationalChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Error Area"
                android:textColor="@color/neutral100"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/tv_subAreaListOperationalChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsregular"
                android:text="Error sub area"
                android:textColor="#969696"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_checkListOperationalChecklist"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_listOperationalChecklist" />

</androidx.constraintlayout.widget.ConstraintLayout>