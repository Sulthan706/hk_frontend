<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.inspeksi.mainInspeksi.ui.activity.InspeksiMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llInspeksiMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_primary_rounded_bottom_inspeksi"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBackInspeksiMain"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_back_gray"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/circle_white"
                android:elevation="@dimen/_4sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Kunjungan Saat Ini"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/poppinssemibold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:background="@drawable/bg_white_rounded_20dp">

                <TextView
                    android:id="@+id/tvBranchNameInspeksiMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error branch"
                    android:textAlignment="center"
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinssemibold"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvProjectNameInspeksiMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error project"
                    android:textAlignment="center"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppinsmedium"
                    app:layout_constraintTop_toBottomOf="@id/tvBranchNameInspeksiMain"/>

                <LinearLayout
                    android:id="@+id/llDateTimeInspeksiMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tvProjectNameInspeksiMain">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:padding="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_lightblue_attendance">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam Masuk"
                            android:textAlignment="center"
                            android:textColor="@color/grey2_client"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppinsmedium"/>

                        <TextView
                            android:id="@+id/tvTimeInInspeksiMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textAlignment="center"
                            android:textColor="@color/secondary_color"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/poppinssemibold"/>

                        <TextView
                            android:id="@+id/tvDateInInspeksiMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Error date"
                            android:textAlignment="center"
                            android:textColor="@color/secondary_color"
                            android:textSize="@dimen/_13ssp"
                            android:fontFamily="@font/poppinsmedium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:padding="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_primary_soft">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam Keluar"
                            android:textAlignment="center"
                            android:textColor="@color/grey2_client"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppinsmedium"/>

                        <TextView
                            android:id="@+id/tvTimeOutInspeksiMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textAlignment="center"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/poppinssemibold"/>

                        <TextView
                            android:id="@+id/tvDateOutInspeksiMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Error date"
                            android:textAlignment="center"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_13ssp"
                            android:fontFamily="@font/poppinsmedium"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv1InspeksiMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Pastikan Anda melakukan absen masuk di project sebelum mulai melakukan inspeksi"
                    android:textAlignment="center"
                    android:textColor="@color/graybtn"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/poppinsmedium"
                    app:layout_constraintTop_toBottomOf="@id/llDateTimeInspeksiMain"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStartInspeksiMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:layout_gravity="center"
                    android:text="Mulai Aktivitas di Area"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="@drawable/bg_secondary"
                    android:elevation="@dimen/_4sdp"
                    app:layout_constraintTop_toBottomOf="@id/tv1InspeksiMain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvInspeksiMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Pindah area tapi belum absen masuk atau keluar?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/poppinsmedium"
                app:layout_constraintTop_toBottomOf="@id/llInspeksiMain"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAbsentInspeksiMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:text="Absen di sini"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/bg_field_white_tranparent"
                app:layout_constraintTop_toBottomOf="@id/tvInspeksiMain"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/llInspeksiMain">

            <LinearLayout
                android:id="@+id/llMeetingInspeksiMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_vom_meeting"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_vom_meeting"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsmedium"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInspeksiInspeksiMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_vom_rutin"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_vom_routine"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsmedium"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAuditInspeksiMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_vom_audit"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_vom_audit"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsmedium"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_weekly_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_weekly_report"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_weekly_progress"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsmedium"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_menu_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:paddingBottom="@dimen/_32sdp"
            app:layout_constraintTop_toBottomOf="@id/linear_menu">

            <LinearLayout
                android:id="@+id/linear_closing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_closing"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closing \n Project"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsmedium"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1"/>



        </LinearLayout>

        <TextView
            android:id="@+id/tvInfoInspeksiMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_32sdp"
            android:background="@drawable/rounded_shape"
            android:fontFamily="@font/poppinsregular"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Harap melakukan absen dahulu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>