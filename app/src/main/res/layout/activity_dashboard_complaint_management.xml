<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.complaint.ui.activity.DashboardComplaintManagementActivity">
    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/appbarComplaintManagement"
            layout="@layout/app_bar_default"/>


    </com.google.android.material.appbar.MaterialToolbar>


    <RelativeLayout
        android:id="@+id/rlComplaintManagement"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@drawable/bg_month_list_shift_checklist">
        <TextView
            android:id="@+id/tvComplaintGetMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Juli1997"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llSummaryCardComplaintManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_summary_card_list_checklist"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintTop_toBottomOf="@+id/rlComplaintManagement">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/bg_list_summary_list_checklist">

            <TextView
                android:id="@+id/tv1_shimmerShiftChecklist"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_20sdp"
                android:maxLines="1"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/secondary_color"
                android:textSize="15sp"
                android:text="Total CTalk bulan ini"/>

            <TextView
                android:id="@+id/tvTotalComplaintManagement"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:maxLines="1"
                tools:text="34"
                android:textSize="15sp"
                android:textColor="@color/secondary_color"
                android:fontFamily="@font/poppinssemibold"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Realisasi"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_progressDetailAbsentProjectMgmnt"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/tvTotalPercentage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="total"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12sp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"/>
                    <ir.mahozad.android.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:labelsSize="10sp"
                        app:centerLabelSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menunggu"
                        android:textColor="@color/black"
                        android:fontFamily= "@font/poppinsregular"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dikerjakan"
                        android:textColor="@color/black"
                        android:fontFamily= "@font/poppinsregular"
                        android:textSize="14sp"
                        android:layout_marginTop="22dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textColor="@color/black"
                        android:fontFamily= "@font/poppinsregular"
                        android:textSize="14sp"
                        android:layout_marginTop="22dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tutup"
                        android:textColor="@color/black"
                        android:fontFamily= "@font/poppinsregular"
                        android:textSize="14sp"
                        android:layout_marginTop="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="4dp">
                        <TextView
                            android:id="@+id/tvWaitingComplaintManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            tools:text="18"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="4dp"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/tvWorkingComplaintManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            tools:text="20"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="4dp"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/tvFinishComplaintManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            tools:text="20"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="4dp"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/tvCloseComplaintManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            tools:text="20"/>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.5"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekly"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="22dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2.3">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="4dp">
                        <TextView
                            android:id="@+id/tvWeeklyBaMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            tools:text="18 / 21"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="4dp"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/tvMonthlyBaMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            tools:text="18 / 20"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComplaintDetail"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Lihat Daftar Pekerjaan"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:textAllCaps="false"
                android:backgroundTint="@color/secondary_color"
                app:cornerRadius="9dp"/>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>