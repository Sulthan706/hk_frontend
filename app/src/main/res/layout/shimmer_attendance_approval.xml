<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_list_complaint_client"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/bg_white_card"
    android:elevation="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivListAttendanceApproval"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_shimmer"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="@dimen/_1sdp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_toEndOf="@id/ivListAttendanceApproval"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:ellipsize="end"
                android:fontFamily="@font/poppinssemibold"
                android:maxLines="1"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/bg_shimmer"
                app:layout_constraintStart_toEndOf="@id/iv_listComplaint"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="1"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/bg_shimmer"
                app:layout_constraintStart_toEndOf="@id/iv_listComplaint"
                app:layout_constraintTop_toBottomOf="@id/tv_namaListComplaint" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="1"
                android:textColor="@color/grey4"
                android:textSize="@dimen/_11ssp"
                android:background="@drawable/bg_shimmer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:textColor="@color/grey4"
                android:textSize="@dimen/_11ssp"
                android:background="@drawable/bg_shimmer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/bg_shimmer"/>

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_4sdp"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="1"
                android:textColor="@color/redTxt"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/bg_shimmer"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvStatusOutListAttendanceApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_4sdp"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="1"
                android:text="sedang bekerja"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/bg_grey1"/>

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:textColor="@color/grey4"
            android:textSize="@dimen/_11ssp"
            android:background="@drawable/bg_shimmer" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:textColor="@color/grey5"
            android:textSize="@dimen/_8ssp"
            android:background="@drawable/bg_shimmer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:padding="@dimen/_6sdp"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:textColor="@color/grey4"
            android:textSize="@dimen/_10ssp"
            android:background="@drawable/bg_shimmer"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="3.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1.5"
                android:layout_marginEnd="@dimen/_4sdp"
                android:textColor="@color/grey5"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppinsregular"
                android:drawablePadding="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/bg_shimmer"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/red1"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/bg_shimmer"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/bg_shimmer" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>