                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Diselesaikan :"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_dateDoneDetailComplaintNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:text=""
                            android:maxLines="2"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_timeDoneDetailComplaintNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:text=""
                            android:maxLength="5"
                            android:maxLines="1"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_24sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_DetailComplaintNotification">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Pembuat CTalk:"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
