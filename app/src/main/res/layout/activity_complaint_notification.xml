                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Dibuat :"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_dateDetailComplaintNotification"
