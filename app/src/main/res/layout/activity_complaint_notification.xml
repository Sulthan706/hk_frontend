                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:maxLines="4"
                        android:padding="@dimen/_12sdp"
                        android:text=" Unknown Keterangan"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_12ssp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Balasan Pengawas"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_white_card"
                    android:elevation="@dimen/_8sdp">

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tv_replyFromLeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:maxLines="4"
                        android:padding="@dimen/_12sdp"
                        android:text="Unknown Balasan"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:visibility="invisible"
                        android:id="@+id/et_replyFromLeader"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Masukan Balasan Pengawas">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_input_replyFromLeader"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="text"
                            android:maxLength="100"
                            android:gravity="top"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/bodyText" />
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <!--                Layout upload image & choose ops-->
                <LinearLayout
                    android:id="@+id/ll_processComplaintNotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Foto kondisi"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rl_uploadBeforeImageComplaintNotif"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:backgroundTint="#DEDEDE"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <ImageView
                                android:id="@+id/iv_beforeDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.25"
                                android:src="@drawable/ic_camera_black"
                                android:visibility="visible"
                                app:tint="@color/black" />

                            <ImageView
                                android:id="@+id/iv_beforeComplaintNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                tools:src="@tools:sample/backgrounds/scenic" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rl_uploadProcessImageComplaintNotif"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:backgroundTint="#DEDEDE"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <ImageView
                                android:id="@+id/iv_processDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.25"
                                android:src="@drawable/ic_camera_black"
                                android:visibility="visible"
                                app:tint="@color/black" />

                            <ImageView
                                android:id="@+id/iv_processComplaintNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                tools:src="@tools:sample/backgrounds/scenic" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rl_uploadAfterImageComplaintNotif"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:backgroundTint="#DEDEDE"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <ImageView
                                android:id="@+id/iv_afterDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.25"
                                android:src="@drawable/ic_camera_black"
                                android:visibility="visible"
                                app:tint="@color/black" />

                            <ImageView
                                android:id="@+id/iv_afterComplaintNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                tools:src="@tools:sample/backgrounds/scenic" />

                        </com.google.android.material.card.MaterialCardView>

                        <!--                        <RelativeLayout-->
                        <!--                            android:id="@+id/rl_uploadAfterImageComplaintNotif"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:layout_margin="@dimen/_3sdp"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:background="@drawable/bg_disable">-->

                        <!--                            <ImageView-->
                        <!--                                android:id="@+id/iv_afterDefault"-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:layout_centerInParent="true"-->
                        <!--                                android:src="@drawable/ic_camera_black"-->
                        <!--                                android:visibility="visible" />-->

                        <!--                            <ImageView-->
                        <!--                                android:id="@+id/iv_afterComplaintNotification"-->
                        <!--                                android:layout_width="match_parent"-->
                        <!--                                android:layout_height="match_parent"-->
                        <!--                                android:layout_centerInParent="true"-->
                        <!--                                android:paddingHorizontal="@dimen/_15sdp"-->
                        <!--                                android:paddingVertical="@dimen/_5sdp"-->
                        <!--                                android:scaleType="centerCrop"-->
                        <!--                                android:src="@drawable/googleg_disabled_color_18"-->
                        <!--                                android:visibility="gone" />-->

                        <!--                        </RelativeLayout>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Before"
                                android:textAlignment="center"
                                android:textColor="@color/neutral100"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Process"
                                android:textAlignment="center"
                                android:textColor="@color/neutral100"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="After"
                                android:textAlignment="center"
                                android:textColor="@color/neutral100"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Diproses Oleh:"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp" />

                    <RelativeLayout
                        android:id="@+id/rl_workerComplaintNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/bg_white_card"
                        android:elevation="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_16sdp"
                        android:paddingStart="@dimen/_12sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_opsComplaintNotification"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/foto1"
                            app:civ_border_color="@android:color/darker_gray"
                            app:civ_border_width="@dimen/_1sdp" />

                        <TextView
                            android:id="@+id/tv_opsNameComplaintNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/iv_opsComplaintNotification"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Error name"
                            android:textColor="@color/neutral100"
                            android:textSize="@dimen/_14ssp" />

                    </RelativeLayout>

                </LinearLayout>

                <!--                Button Proses-->
                <RelativeLayout
                    android:id="@+id/rl_buttonProcessComplaintNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:background="@drawable/bg_primary"
                    android:elevation="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_processComplaintNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Proses"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

                <!--                Button Submit-->
                <RelativeLayout
                    android:id="@+id/rl_buttonSubmitComplaintNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:background="@drawable/bg_primary"
                    android:elevation="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_submitComplaintNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Kirim"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

