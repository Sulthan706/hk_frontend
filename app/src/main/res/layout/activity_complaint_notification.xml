                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/card_detailComplaintNotification">

                <TextView
                    android:id="@+id/tv_titleDetailComplaintNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Error title"
                    android:textAlignment="center"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_16ssp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tv_locationDetailComplaintNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error area"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_subLocDetailComplaintNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error sub area"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_escalation_inDetailComplaintNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error eskalasi"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <RelativeLayout
