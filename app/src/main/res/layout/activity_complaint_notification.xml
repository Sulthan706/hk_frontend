                app:layout_constraintTop_toBottomOf="@id/lldetailComplaintNotification1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2.01"
                    android:orientation="horizontal">

                    <LinearLayout
