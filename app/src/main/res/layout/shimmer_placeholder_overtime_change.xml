<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/bg_white_card"
    android:elevation="@dimen/_8sdp">

    <ImageView
        android:id="@+id/iv_shimmmer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_1_shimmer"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_shimmer"
        android:fontFamily="@font/poppinsregular"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/h5"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_shimmmer"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/bg_shimmer"
        android:fontFamily="@font/poppinsregular"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/h5"
        app:layout_constraintStart_toEndOf="@id/iv_shimmmer"
        app:layout_constraintTop_toBottomOf="@id/tv_1_shimmer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_shimmmer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_marginTop="@dimen/_8sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_marginTop="@dimen/_8sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_shimmer"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_24sdp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>