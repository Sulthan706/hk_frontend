<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.attendance_fix.ui.activity.midlevel.new_.FabSearchAttendanceActivity">

    <include
        android:id="@+id/appbar_SearchFabPerson"
        android:visibility="visible"
        layout="@layout/app_bar_default_search_fab_person"/>
    <TextView
        android:id="@+id/tvResultSearchPerson"
        app:layout_constraintTop_toBottomOf="@+id/appbar_SearchFabPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil pencarian"
        android:textAlignment="textStart"
        android:layout_margin="@dimen/_8sdp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/llEmptySearchPerson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResultSearchPerson"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_search_keyword"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:lottie_url="https://assets2.lottiefiles.com/packages/lf20_tmsiddoc.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvNotFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data tidak ada"
            android:visibility="gone"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan nama staff di kolom pencarian terlebih dahulu"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:fontFamily="@font/poppinsregular"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeSearchProjectComplaintManagement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvResultSearchPerson"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFabSearchPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp"
            android:visibility="gone"
            tools:listitem="@layout/item_fab_history_attendance_person"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





