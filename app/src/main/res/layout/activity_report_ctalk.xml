<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.report.ui.activity.ReportCtalkActivity">


    <include
        android:id="@+id/layout_appbar"
        layout="@layout/app_bar_default"/>


    <LinearLayout
        android:id="@+id/llPeriodeReportMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_appbar"
        android:weightSum="2"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/tvDateTodayCtalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:text="Semua Periode"
            android:textSize="12sp"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:text="Semua Project"
            android:textSize="12sp"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="3dp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCountTotalComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llPeriodeReportMain"
        android:weightSum="2"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Komplain"
            android:textSize="14sp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginRight="3dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvtotalComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 Komplain"
            android:textSize="14sp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lldetailCountReportCtalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llCountTotalComplaint"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/bg_light_cream"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kebersihan"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/tvCleaness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenaga Kerja"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/tvManpower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasilitas Rusak"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/tvBrokenFacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sikap dan Perilaku"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/tvAttitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keamanan"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/tvSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keselamatan dan Kesehatan"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/tvSafetyHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:text="Gangguan Hama"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPestControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llCountProgressCtalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lldetailCountReportCtalk"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llWaiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_report_red_rounded"
            android:paddingHorizontal="21dp"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tvWaitingCtalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="0"
                android:textSize="14sp"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llOnprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_report_orange_rounded"
            android:paddingHorizontal="11dp"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On progress"
                android:textSize="10sp"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/poppinsregular"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tvOnprogressCtalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:text="0"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_report_green_rounded"
            android:paddingHorizontal="29dp"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textSize="10sp"
                android:textColor="@color/green1"
                android:fontFamily="@font/poppinsregular"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tvDoneCtalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"
                android:text="0"
                android:textSize="14sp"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_report_blue_rounded"
            android:paddingHorizontal="23dp"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Closed"
                android:textAlignment="center"
                android:textColor="@color/secondary_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvCloseCtalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_color"
                android:text="0"
                android:textSize="14sp"
                android:paddingHorizontal="5dp"
                android:fontFamily="@font/poppinssemibold"
                android:textAlignment="center"/>
        </LinearLayout>





    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComplaintCtalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/item_complaint_cftalk"
        app:layout_constraintTop_toBottomOf="@+id/llCountProgressCtalk"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rlBtnTodayComplaintCtalk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_green_tosca"
        android:padding="9.45dp"
        app:layout_constraintTop_toBottomOf="@+id/llCountProgressCtalk"
        android:elevation="@dimen/_2sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_complaint_cftalk" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_chevron_right_white" />

        <TextView
            android:id="@+id/tvCountTodayComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="48dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Komplain Hari Ini"
            android:textColor="@color/white"
            android:textSize="14sp"

            android:layout_marginTop="1dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvNotifListcomplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingin melihat daftar komplain per project?"
        app:layout_constraintTop_toBottomOf="@+id/rlBtnTodayComplaintCtalk"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"/>
    <RelativeLayout
        android:id="@+id/rlListCtalk"
        android:layout_marginHorizontal="140dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvNotifListcomplaint"
        android:background="@drawable/bg_stroke_blue"
        android:paddingHorizontal="19dp"
        android:paddingTop="7dp"
        android:paddingBottom="9dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Menu CTalk"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/blue2" />

    </RelativeLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/mBFilterByCtalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Filter By"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginBottom="25dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>