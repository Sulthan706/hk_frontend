<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_5sdp"
    tools:context=".features.features_vendor.homescreen.dac.ui.fragment.ConfirmDacChecklistDialog">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Penilaian"
                android:textAlignment="center"
                android:textColor="@color/black2"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppinsregular"
                android:text="Status"
                android:textColor="@color/grayTxt"
                android:textSize="@dimen/_11ssp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerDialogPenilaianAudit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:entries="@array/penilaianAudit"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppinsregular"
                android:text="Catatan atau Alasan (opsional)"
                android:textColor="@color/grayTxt"
                android:textSize="@dimen/_11ssp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/bg_field"
                android:layout_marginTop="@dimen/_4sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etNoteDialogPenilaianAudit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="top"
                    android:hint="berikan catatan atau alasan di sini"
                    android:maxLength="50"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppinsregular"
                android:text="Foto Pendukung (opsional)"
                android:textColor="@color/grayTxt"
                android:textSize="@dimen/_11ssp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:backgroundTint="@color/grayLine"
                app:cardCornerRadius="@dimen/_6sdp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/ivDefaultDialogPenilaianAudit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_black"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/ivPreviewDialogPenilaianAudit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_error_image" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancelDialogPenilaianAudit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_red"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmitDialogPenilaianAudit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_secondary"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>