<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_client.report.ui.new_.activity.KondisiAreaActivity">

    <include
        android:id="@+id/appbarKondisiAreaReport"
        layout="@layout/app_bar_default_client"/>
    <TextView
        android:id="@+id/tvKondisiAreaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat laporan berdasarkan area kerja"
        android:fontFamily="@font/poppinsregular"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/appbarKondisiAreaReport"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListKondisiArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvKondisiAreaTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>