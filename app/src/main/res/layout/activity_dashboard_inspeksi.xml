<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.inspeksi.mainInspeksi.ui.activity.DashboardInspeksiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDashboardInspeksi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:padding="@dimen/_16sdp"
        android:background="@drawable/bg_tracking_activity"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackDashboardInspeksi"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_back_gray"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/circle_white"
            android:elevation="@dimen/_4sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvWelcomeDashboardInspeksi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="Selamat Datang"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/poppinssemibold"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvProjectDashboardInspeksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_24sdp"
            android:gravity="center"
            android:text="Error Project"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppinssemibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv1DashboardInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Aktivitas Inspeksi"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toBottomOf="@id/clDashboardInspeksi"/>

    <TextView
        android:id="@+id/tv2DashboardInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:text="Lihat daftar aktivitas yang dilakukan selama kunjungan"
        android:textColor="@color/grayTxt"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tv1DashboardInspeksi"/>

    <TextView
        android:id="@+id/tvKontrolAreaDashboardInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_card"
        android:elevation="@dimen/_2sdp"
        android:text="Kontrol Area"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        android:drawablePadding="@dimen/_4sdp"
        android:drawableStart="@drawable/ic_kontrol_area"
        android:drawableEnd="@drawable/ic_next_grey"
        app:layout_constraintTop_toBottomOf="@id/tv2DashboardInspeksi"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/tvMeetingDashboardInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_card"
        android:elevation="@dimen/_2sdp"
        android:text="Meeting"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinssemibold"
        android:drawablePadding="@dimen/_4sdp"
        android:drawableStart="@drawable/ic_meeting"
        android:drawableEnd="@drawable/ic_next_grey"
        app:layout_constraintTop_toBottomOf="@id/tvKontrolAreaDashboardInspeksi"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <ImageView
        android:id="@+id/ivCreateDashboardInspeksi"
        android:layout_width="@dimen/_62sdp"
        android:layout_height="@dimen/_62sdp"
        android:layout_margin="@dimen/_12sdp"
        android:src="@drawable/ic_create_white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>