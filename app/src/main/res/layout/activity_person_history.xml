<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.attendance_fix.ui.activity.midlevel.new_.PersonHistoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/layoutAppbarHistoryAttendancePerson"
            layout="@layout/app_bar_default" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/llNameStatusAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_field"
        android:layout_marginHorizontal="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/abl"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_4ssp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_already_attendance"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/foto1"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_margin="@dimen/_4sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp">

            <TextView
                android:id="@+id/tvEmployeeNameHistoryP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/tvJobNucEmployeeHistoryP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="@dimen/_3ssp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llBtnSelectMonthAndYear"
        app:layout_constraintTop_toBottomOf="@+id/llNameStatusAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12ssp">

        <RelativeLayout
            android:id="@+id/rvDateDetailPerson"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_rectangle_blue_attendance"
            android:gravity="center">

            <TextView
                android:id="@+id/tvMonthPersonResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"/>
        </RelativeLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/hsCountResult"
        app:layout_constraintTop_toBottomOf="@+id/llBtnSelectMonthAndYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_margin="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_result"
                android:layout_margin="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp">
                    <TextView
                        android:id="@+id/tvHadirCountResult"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hadir"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#2B5281"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_result"
                android:layout_margin="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_14sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp">
                    <TextView
                        android:id="@+id/tvLiburCountResult"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Libur"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#2B5281"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_result"
                android:layout_margin="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp">
                    <TextView
                        android:id="@+id/tvAlpaCountResult"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Alpa"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#2B5281"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_result"
                android:layout_margin="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp">
                    <TextView
                        android:id="@+id/tvLupaAbsenCountResult"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lupa Absen"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#2B5281"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_result"
                android:layout_margin="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_17sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp">
                    <TextView
                        android:id="@+id/tvIzinCountResult"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Izin"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#2B5281"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_result"
                android:layout_margin="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp">
                    <TextView
                        android:id="@+id/tvLemburGantiCountResult"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lembur Ganti"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#2B5281"/>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </HorizontalScrollView>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rvCountHistoryPersonResult"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/llBtnSelectMonthAndYear"-->
<!--        android:orientation="horizontal"-->
<!--        tools:listitem="@layout/item_person_history_result"-->
<!--        android:layout_marginTop="@dimen/_8sdp"/>-->



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/hsCountResult"
            android:id="@+id/rvHistoryPersonResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_history_schedule_result" />






</androidx.constraintlayout.widget.ConstraintLayout>