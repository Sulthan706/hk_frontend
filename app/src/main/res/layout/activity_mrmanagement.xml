<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.features_management.homescreen.home.ui.activity.MRManagementActivity">

    <include
        android:id="@+id/appbar_mr"
        layout="@layout/app_bar_default"/>

    <RelativeLayout
        android:id="@+id/rlPeriodAbsenceReportManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        android:background="@drawable/bg_field"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvPeriodAbsenceReportManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="Pilih periode tanggal"
            android:textColor="@color/grey2"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsregular"/>

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_calendar_grey"/>

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table_history_closing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow>

                <TextView
                    style="@style/table_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_column="0"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="No."/>

                <TextView
                    style="@style/table_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_column="1"
                    android:layout_weight="1.2"
                    android:text="Kode item"/>

                <TextView
                    style="@style/table_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_column="1"
                    android:layout_weight="1.2"
                    android:text="Nama item"/>

                <TextView
                    style="@style/table_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="Jumlah"/>

                <TextView
                    style="@style/table_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_column="2"
                    android:layout_weight="0.8"
                    android:text="Satuan"/>


            </TableRow>

        </TableLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_table_history_closing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            tools:listitem="@layout/list_item_mr"
            tools:itemCount="8"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_history_closing"/>

        <TextView
            android:id="@+id/tv_page_history_closing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Showing ..."
            android:textColor="@color/black3"
            android:textSize="@dimen/_9ssp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_table_history_closing"/>

        <ImageView
            android:id="@+id/ivNextAbsenceReportManagement"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_next_greys"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/rv_table_history_closing"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivPrevAbsenceReportManagement"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_prev_greys"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/rv_table_history_closing"
            app:layout_constraintEnd_toStartOf="@id/ivNextAbsenceReportManagement"/>

        <TextView
            android:id="@+id/tv_copyright_history_closing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:text="Copyright Â©2022 PT Hygiene Kleen. All Rights Reserved."
            android:textAlignment="center"
            android:textColor="@color/black3"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tidak ada data material request"
            android:fontFamily="@font/poppinsregular"
            android:textAlignment="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_20sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>