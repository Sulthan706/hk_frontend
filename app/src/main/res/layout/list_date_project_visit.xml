<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clDateProjectVisit"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:background="@drawable/bg_field"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/llListDataProjectVisit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="1.7"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivNextProjectVisit">

        <TextView
            android:id="@+id/tvDateProjectVisit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error Date"
            android:maxLines="1"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCountProjectVisit"/>

        <TextView
            android:id="@+id/tvCountProjectVisit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error"
            android:textAlignment="textEnd"
            android:textColor="@color/primary_color"
            android:maxLines="1"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivNextProjectVisit"
            app:layout_constraintStart_toEndOf="@id/tvDateProjectVisit"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivNextProjectVisit"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_next_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/llListDataProjectVisit"/>

</androidx.constraintlayout.widget.ConstraintLayout>