<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_client.complaint.ui.activity.ComplaintActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_15sdp">

        <TextView
            android:id="@+id/tv_title_pengajuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Judul CTalk"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Keterangan"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_title_create_complaint_client" />

        <TextView
            android:id="@+id/tv_upload_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Unggah foto"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_desc" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_complaint_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_25sdp"
            android:background="@drawable/btn_disable"
            android:fontFamily="@font/poppinsmedium"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/bodyText"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_sub_area" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_complaint_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/btn_enabled"
            android:fontFamily="@font/poppinsmedium"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/bodyText"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_sub_area" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_photo_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_upload_photo">

            <ImageView
                android:id="@+id/iv_pick_photo_complaint"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/rounded_dark_gray"
                android:padding="@dimen/_15sdp"
                android:src="@drawable/ic_camera_black"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_result_four_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_pick_photo_complaint">

                <ImageView
                    android:id="@+id/iv_result_photo_complaint"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_result_photo_complaint2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_result_photo_complaint3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_result_photo_complaint4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp"
                    android:visibility="invisible" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/spinner_title_create_complaint_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/btn_area"
            android:paddingHorizontal="@dimen/_10sdp"
            android:spinnerMode="dropdown"
            app:smsp_arrowColor="@color/grayTxt"
            app:smsp_arrowPaddingBottom="@dimen/_5sdp"
            app:smsp_arrowPaddingLeft="@dimen/_1sdp"
            app:smsp_enableFloatingLabel="false"
            app:smsp_floatingLabelColor="@color/white"
            app:smsp_floatingLabelText="Pilih area"
            app:smsp_hint="Pilih Judul CTalk"
            app:smsp_hintColor="@color/grayTxt"
            app:smsp_hintSize="@dimen/_10sdp"
            app:smsp_isSearchable="false"
            app:smsp_itemColor="@color/grayTxt"
            app:smsp_itemListColor="@color/grayTxt"
            app:smsp_itemListHintBackgroundColor="#808080"
            app:smsp_itemListHintColor="@color/primary_color"
            app:smsp_multilineError="false"
            app:smsp_selectedItemListColor="@color/grayTxt"
            app:smsp_underlineColor="#F5F6F8"
            app:layout_constraintTop_toBottomOf="@id/tv_title_pengajuan"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_desc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:hintEnabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_input_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_gray"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="top|left"
                android:hint="Keterangan"
                android:maxLength="500"
                android:textSize="@dimen/_12ssp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_calendar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:visibility="gone"
            app:hintEnabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_photo_complaint">

            <TextView
                android:id="@+id/tv_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Tanggal"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/et_input_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_gray"
                android:drawableRight="@drawable/ic_calendar_orange"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_vertical"
                android:hint="01 Januari 0001"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_area"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:hintEnabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_calendar">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Area"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/et_input_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/btn_area"
                android:paddingHorizontal="@dimen/_10sdp"
                android:spinnerMode="dropdown"
                app:smsp_arrowColor="@color/grayTxt"
                app:smsp_arrowPaddingBottom="@dimen/_5sdp"
                app:smsp_arrowPaddingLeft="@dimen/_1sdp"
                app:smsp_enableFloatingLabel="false"
                app:smsp_floatingLabelColor="@color/white"
                app:smsp_floatingLabelText="Pilih area"
                app:smsp_hint="Pilih Area"
                app:smsp_hintColor="@color/grayTxt"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_isSearchable="false"
                app:smsp_itemColor="@color/grayTxt"
                app:smsp_itemListColor="@color/grayTxt"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="@color/primary_color"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/grayTxt"
                app:smsp_underlineColor="#F5F6F8" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_sub_area"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:hintEnabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_area">

            <TextView
                android:id="@+id/tv_sub_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Sub Area"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/et_input_sub_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/btn_area"
                android:paddingHorizontal="@dimen/_10sdp"
                android:spinnerMode="dropdown"
                app:smsp_arrowColor="@color/grayTxt"
                app:smsp_arrowPaddingBottom="@dimen/_5sdp"
                app:smsp_arrowPaddingLeft="@dimen/_1sdp"
                app:smsp_enableFloatingLabel="false"
                app:smsp_floatingLabelColor="@color/white"
                app:smsp_floatingLabelText="Pilih area"
                app:smsp_hint="Pilih Sub Area"
                app:smsp_hintColor="@color/grayTxt"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_isSearchable="false"
                app:smsp_itemColor="@color/grayTxt"
                app:smsp_itemListColor="@color/grayTxt"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="@color/primary_color"
                app:smsp_multilineError="false"
                app:smsp_searchHeaderBackgroundColor="@color/primary_color"
                app:smsp_searchHeaderText="Cari sub area"
                app:smsp_searchTextColor="@color/grayTxt"
                app:smsp_selectedItemListColor="@color/grayTxt"
                app:smsp_underlineColor="#F5F6F8" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/statusBarBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetEndWithActions="0dp">

            <include
                android:id="@+id/appbar_complaint"
                layout="@layout/app_bar_default_with_history_client"
                app:layout_constraintTop_toTopOf="parent" />



        </com.google.android.material.appbar.MaterialToolbar>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>