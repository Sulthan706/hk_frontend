<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.checklist.ui.old.spv.PenilaianBySpvActivity">

    <include
        android:id="@+id/appbar_penilaianSpv"
        layout="@layout/app_bar_default" />

    <FrameLayout
        android:id="@+id/flConnectionTimeoutPenilaianSpv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar_penilaianSpv" />

    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/toolbar">-->

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/appbar_penilaianSpv">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:text="Staff yang bertugas"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="@dimen/h5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_field"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_pengawasImgPenilaianSpv"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="4dp"
                android:src="@drawable/foto1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/iv_pengawasImgPenilaianSpv"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Pengawas "
                    android:textColor="@color/secondary_color"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_pengawasNamePenilaianSpv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Name (NUC)"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_field"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_operationalImgPenilaianSpv"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="4dp"
                android:src="@drawable/foto1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/iv_operationalImgPenilaianSpv"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Operational "
                    android:textColor="@color/secondary_color"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_operationalNamePenilaianSpv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Name (NUC)"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Tanggal"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_tanggalPenilaianSpv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Error Shift"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Shift"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_shiftPenilaianSpv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Error Shift"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Kode Plotting"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_plottingPenilaianSpv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Error Shift"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Area"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_areaPenilaianSpv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Error Area"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_subArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Sub Area"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_subAreaPenilaianSpv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Error Sub Area"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Status Penilaian"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_statusPenilaianSpv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsmedium"
                android:text="Error Status Penilaian"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:text="Daily Activity"
            android:textColor="@color/black"
            android:textSize="@dimen/h5" />

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerDetailStaff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_shimmer_cardview" />

            <View
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_shimmer_cardview" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dailyActChecklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


</androidx.constraintlayout.widget.ConstraintLayout>