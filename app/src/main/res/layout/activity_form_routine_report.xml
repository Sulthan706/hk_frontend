<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.inspeksi.rutin.ui.activity.FormRoutineReportActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/appbarFormRoutineReport"
            layout="@layout/app_bar_default"/>


    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical"
                android:background="@drawable/bg_yellow_soft">

                <TextView
                    android:id="@+id/tvBranchFormRoutineReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error Branch"
                    android:textAlignment="center"
                    android:textColor="@color/brown1"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <TextView
                    android:id="@+id/tvProjectFormRoutineReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Error Project"
                    android:textAlignment="center"
                    android:textColor="@color/brown1"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/poppinssemibold"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="Dibuat oleh"
                android:textColor="@color/grey2_client"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:id="@+id/tvCreatedFormRoutineReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:padding="@dimen/_8sdp"
                android:text="Error"
                android:textColor="@color/black2"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/bg_field_empty_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="Tujuan kunjungan"
                android:textColor="@color/grey2_client"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:padding="@dimen/_8sdp"
                android:text="Kunjungan Rutin"
                android:textColor="@color/black2"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/bg_field_empty_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="Waktu Kunjungan"
                android:textColor="@color/grey2_client"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:id="@+id/tvDateFormRoutineReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:padding="@dimen/_8sdp"
                android:text="Error"
                android:textColor="@color/black2"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/bg_field_empty_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="Topik Diskusi"
                android:textColor="@color/grey2_client"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsmedium"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTopikFormRoutineReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/bg_field"
                android:hint="Masukkan judul atau topik"
                android:maxLines="1"
                android:textColor="@color/black2"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsregular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catatan "
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(opsional)"
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsregular"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/bg_field"
                android:padding="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etNoteFormRoutineReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="Masukkan catatan hasil diskusi di sini"
                    android:maxLines="4"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unggah Dokumen Lampiran "
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(opsional)"
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsregular"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="File dalam format pdf dengan ukuran maksimal 2Mb"
                android:textColor="@color/grayTxt"
                android:textSize="@dimen/_9ssp"
                android:textStyle="italic"
                android:fontFamily="@font/poppinsregular"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvUploadDokumenFormLaporanMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                android:background="@drawable/btn_primary"
                android:elevation="@dimen/_2sdp"
                android:text="Upload Dokumen"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppinsregular"
                android:visibility="gone"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFileFormLaporanMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvFileFormLaporanMeeting"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="filename"
                    android:textColor="@color/blue2"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppinsregular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivFileFormLaporanMeeting"/>

                <ImageView
                    android:id="@+id/ivFileFormLaporanMeeting"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/btn_primary"
                    android:src="@drawable/ic_replay_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload foto "
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsmedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(opsional)"
                    android:textColor="@color/grey2_client"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppinsregular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlUploadFotoRoutineReport"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_field_inspeksi_upload_imag">

                    <ImageView
                        android:id="@+id/ivUploadedImgRoutineReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_empty_card"
                        android:visibility="gone"
                        android:scaleType="centerInside"/>

                    <ImageView
                        android:id="@+id/ivEmptyUploadImgRoutineReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_camera_fill"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:padding="40dp"/>

                    <TextView
                        android:id="@+id/tvImgUploadRoutineReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload foto"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/primary_color"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:layout_marginBottom="42dp"/>

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mvCardResultUploadRoutineReport"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_field_inspeksi_upload_imag"/>
                    <ProgressBar
                        android:id="@+id/pbLoadingRoutineReportUri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="26dp"/>
                    <ImageView
                        android:id="@+id/ivResultUri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        />
                    <ImageButton
                        android:id="@+id/ibDeleteImage"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_delete" />
                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_116sdp"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_field"
                    >

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etUploadImageRoutineReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLines="4"
                        android:hint="Keterangan"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsregular"/>

                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNextDisableFormRoutineReport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_margin="@dimen/_22sdp"
                android:background="@drawable/btn_disable"
                android:fontFamily="@font/poppinsmedium"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Lanjut"
                android:visibility="visible"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNextEnableFormRoutineReport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_margin="@dimen/_22sdp"
                android:background="@drawable/bg_secondary"
                android:fontFamily="@font/poppinsmedium"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Lanjut"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>