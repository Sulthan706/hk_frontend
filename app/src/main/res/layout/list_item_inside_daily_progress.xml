<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/background_stroke_grey"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black2"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_status_closing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/poppinsbold"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_closing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/linear_visibility"
        android:background="@drawable/bg_blue_rounded"
        android:fontFamily="@font/poppinsregular"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        android:text="@string/text_daily_closing"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_visibility"
        android:layout_margin="10dp"
        android:background="@drawable/bg_stroke_blue"
        android:fontFamily="@font/poppinsregular"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_gravity="center_vertical"
        android:text="Lihat Riwayat"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>