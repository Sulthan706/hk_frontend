<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:id="@+id/ivBpjsBot"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_close_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleBpjsBot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Update Data Dokumen"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvBpjsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pilih komponen yang akan dilengkapi atau diperbaharui"
        android:textAlignment="center"
        android:textColor="@color/grayTxt"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBpjsBot"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNumBpjs"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBpjsTitle"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        android:text="Nomor BPJS"
        android:textColor="@color/white"
        android:backgroundTint="#7393C8"
        app:cornerRadius="8dp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadDocumentBpjs"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNumBpjs"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        android:text="Upload Foto Dokumen"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondary_color"
        app:cornerRadius="8dp"
        app:layout_goneMarginTop="20dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>