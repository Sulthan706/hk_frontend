<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.plotting.ui.activity.ScheduleActivity">

    <include
        android:id="@+id/layout_appbar"
        layout="@layout/app_bar_default_with_history" />

    <TextView
        android:id="@+id/tv_plotting_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Kode Plotting"
        android:textColor="@color/black"
        android:textSize="@dimen/h5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_appbar" />


    <LinearLayout
        android:id="@+id/ll_code_plotting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_rectangle"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plotting_code">

        <TextView
            android:id="@+id/tv_your_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:fontFamily="@font/poppinsregular"
            android:padding="10dp"
            android:text="Pilih kode plotting"
            android:textColor="@color/black"
            android:textSize="@dimen/bodyText" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_plotting_choose_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pilih Karyawan"
        android:textColor="@color/black"
        android:textSize="@dimen/h5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_code_plotting" />


    <LinearLayout
        android:id="@+id/ll_plotting_choose_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_rectangle"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plotting_choose_employee">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="0.2"
            android:src="@drawable/ic_baseline_person_pin_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:fontFamily="@font/poppinsregular"
            android:padding="10dp"
            android:text="Pilih karyawan"
            android:textColor="@color/black"
            android:textSize="@dimen/bodyText" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>