<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:id="@+id/ivCloseBottomComplientClient"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_close_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1BottomFotoAreaInspeksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="pilih Kategori"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/llImageLogoClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv1BottomFotoAreaInspeksi"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="26dp">

        <ImageView
            android:id="@+id/ivLogoClient"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/logoclient" />

        <ImageView
            android:id="@+id/ivLogoCarefastClient"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="30dp"
            android:src="@drawable/hk_home"
            android:layout_weight="1"
            android:contentDescription="@string/logoclient" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBottomComplaintVisitorClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:padding="@dimen/_8sdp"
        android:text="Komplain dari Visitor"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:backgroundTint="#4F72A4"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/llImageLogoClient"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBottomComplaintProjectClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/btnBottomComplaintVisitorClient"
        android:text="Komplain Project Saya"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondary_color"
        app:cornerRadius="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>