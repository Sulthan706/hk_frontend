<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.profile.ui.activity.EditProfileActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/app_bar_default"
            layout="@layout/app_bar_profile" />



    </com.google.android.material.appbar.MaterialToolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rv_edit_profile"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:civ_border_color="@android:color/darker_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/profile_ic" />

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ic_baseline_brightness"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_round_camera_alt_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ic_baseline_brightness"
                    android:padding="@dimen/_7sdp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_check_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/ivUploadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="Save Photo"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsmedium"
                android:textAllCaps="false"
                android:visibility="gone"
                android:background="@drawable/btn_green"
                app:layout_constraintTop_toBottomOf="@id/rv_edit_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_edit_profile" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etUsernameProfile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:enabled="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:hint="Email Anda"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLength="100"
                    android:focusableInTouchMode="false"
                    android:focusable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_no_hp_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Nomor Telepon"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etUsernameProfile" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etNoHpProfile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:enabled="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:hint="No. Telepon Anda"
                app:helperTextTextColor="@color/red"
                app:layout_constraintTop_toBottomOf="@+id/tv_no_hp_profile">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="phone"
                    android:maxLength="20" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/etNoHpProfile"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/llAddNumberPhoneProfile"
                android:visibility="visible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_plus"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="Jika ada No. Telepon ke-2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/llAddNumberPhoneProfile"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/llMinNumberPhoneProfile"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_plus"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jika ada No. Telepon ke-2"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etNoHpProfileSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@+id/llMinNumberPhoneProfile"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:enabled="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:hint="No. Telepon Anda 2"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvPhone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="phone"
                    android:maxLength="20"/>

            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:id="@+id/vLineId2"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                app:layout_constraintTop_toBottomOf="@+id/etNoHpProfileSecond"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_shimmer_cardview" />

            <TextView
                android:id="@+id/tvNikEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="NIK"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vLineId2" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etNikEmployee"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:hint="NIK"
                app:layout_constraintTop_toBottomOf="@+id/tvNikEmployee"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvNikValueEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLength="16" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/vLineId3"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                app:layout_constraintTop_toBottomOf="@+id/etNikEmployee"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_shimmer_cardview" />

            <TextView
                android:id="@+id/SelfId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Identitas Diri"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vLineId3"
                android:layout_marginTop="@dimen/_12sdp"/>



            <LinearLayout
                android:id="@+id/llEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/SelfId"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvAddressProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Alamat Domisili"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etNoHpProfileSecond"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etAddress"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Alamat"
                    app:layout_constraintTop_toBottomOf="@id/tvAddressProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsregular"
                        android:inputType="text|textMultiLine|textCapSentences"
                        android:maxLength="100"
                        android:gravity="left"
                        android:maxLines="10"
                        android:lines="4"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvAddressIdentityCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Alamat KTP"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAddress"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/tvAddressIdentityCardSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Apakah alamat KTP sama dengan alamat domisili di atas?"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAddress"
                    android:layout_marginTop="10dp"/>

                <RadioGroup
                    android:id="@+id/rgEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_15sdp">
                    <RadioButton
                        android:id="@+id/rbEditProfileY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya, sama"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/grey2"/>
                    <RadioButton
                        android:id="@+id/rbEditProfileN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak"
                        android:layout_marginLeft="11dp"
                        android:textColor="@color/grey2"
                        android:fontFamily="@font/poppinsregular"/>
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etAlamatKtp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:enabled="true"
                    android:hint="Alamat KTP"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
                    app:helperTextTextColor="@color/red"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvAlamatKtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>





                <TextView
                    android:id="@+id/tvBirthdateProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/etAddress"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Tanggal lahir"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <RelativeLayout
                    android:id="@+id/etBirthdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/tvBirthdateProfile"
                    android:hint="Tanggal lahir"
                    android:background="@drawable/bg_field_material_transparent"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_9sdp">

                    <TextView
                        android:id="@id/tvProfileBirthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:text="Tanggal lahir"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/ivCalendar"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_calendar_orange" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvPlacebirthProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempat lahir"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/etBirthdateProfile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppinsmedium"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPlaceBirthProfile"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Tempat lahir"
                    app:layout_constraintTop_toBottomOf="@id/tvPlacebirthProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@id/tvPlaceProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsregular"
                        android:inputType="text"
                        android:maxLength="30"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvGenderProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis kelamin"
                    app:layout_constraintTop_toBottomOf="@id/etPlaceBirthProfile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/etGenderProfile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvGenderProfile">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tvGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/gender"
                        android:background="@drawable/bg_field_material_transparent"
                        android:spinnerMode="dropdown"
                        android:dropDownVerticalOffset="@dimen/_46sdp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_down"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvMaritalStatusProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Pernikahan"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@id/etGenderProfile"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <RelativeLayout
                    android:id="@+id/etMaritalStatus"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="8dp"
                    android:elevation="@dimen/_6sdp"
                    app:layout_constraintTop_toBottomOf="@id/tvMaritalStatusProfile">

                    <Spinner
                        android:id="@+id/tvMarital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:entries="@array/maritalStatus"
                        android:focusableInTouchMode="false"
                        android:spinnerMode="dropdown"
                        android:dropDownVerticalOffset="@dimen/_46sdp"
                        android:background="@drawable/bg_field_material_transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_down"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Jumlah anak"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menuChildren"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih jumlah"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginBottom="15dp"
                    app:endIconDrawable="@drawable/ic_chevron_down"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/acomFieldAdapterChildren"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Agama"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menuReligion"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih agama"
