<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_permission_mid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_6sdp"
    android:background="@drawable/bg_white_card"
    android:elevation="@dimen/_4sdp"
    android:paddingHorizontal="@dimen/_12sdp"
    android:paddingVertical="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/ll1ItemListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvStatusItemListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:background="@drawable/bg_grey1"
            android:text="Kunjungan Rutin"
            android:textAlignment="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tvDateItemListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:text="Error"
            android:textAlignment="textEnd"
            android:textColor="@color/graybtn"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv1ItemListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/poppinsregular"
        android:text="Dicek oleh"
        android:textColor="@color/graybtn"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toBottomOf="@id/ll1ItemListKontrolArea"/>

    <TextView
        android:id="@+id/tvCheckByItemListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="Error"
        android:textColor="@color/grey2_client"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toBottomOf="@id/tv1ItemListKontrolArea"/>

    <LinearLayout
        android:id="@+id/ll2ItemListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:weightSum="3"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvCheckByItemListKontrolArea">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:text="Jam Kontrol"
            android:textColor="@color/graybtn"
            android:textSize="@dimen/_9ssp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/poppinsregular"
            android:text="Penilaian"
            android:textColor="@color/graybtn"
            android:textSize="@dimen/_9ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3ItemListKontrolArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll2ItemListKontrolArea">

        <TextView
            android:id="@+id/tvTimeItemListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:text="Error"
            android:textColor="@color/grey2_client"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:id="@+id/tvManpowerItemListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:text="Manpower"
            android:textColor="@color/grey2_client"
            android:textSize="@dimen/_11ssp"
            android:drawableStart="@drawable/ic_circle_chooser"
            android:drawablePadding="@dimen/_2sdp"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/tvKondisiAreaItemListKontrolArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:text="Kondisi Area"
            android:textColor="@color/grey2_client"
            android:textSize="@dimen/_11ssp"
            android:drawableStart="@drawable/ic_done_circle_green"
            android:drawablePadding="@dimen/_2sdp"
            tools:ignore="UseCompatTextViewDrawableXml" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvLaporanItemListMeetingInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:background="@drawable/bg_primary"
        android:fontFamily="@font/poppinsregular"
        android:text="Lihat Laporan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toBottomOf="@id/ll3ItemListKontrolArea"/>

</androidx.constraintlayout.widget.ConstraintLayout>