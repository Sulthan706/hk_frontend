<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/row_number"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/table_content_cell_bg"
        android:text="1"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/mr_kode"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/blue"
        android:background="@drawable/table_content_cell_bg"
        android:text="MR-0108010100071"
        android:textSize="18sp"
        android:padding="8dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/mr_month"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/table_content_cell_bg"
        android:text="5"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/mr_year"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/table_content_cell_bg"
        android:text="Year"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/mr_date"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/table_content_cell_bg"
        android:text=""
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- OA Column -->
    <LinearLayout
        android:id="@+id/oa_container"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="8dp">

        <!-- Header text (will be hidden for data rows) -->
        <TextView
            android:id="@+id/oa_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OA"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Button and Date (will be hidden for header row) -->
        <LinearLayout
            android:id="@+id/oa_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_check_oa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/light_orange"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white"
                app:iconSize="24dp"
                android:text=""
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/oa_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="25-03-2024"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- OPS Column -->
    <LinearLayout
        android:id="@+id/ops_container"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="8dp">

        <!-- Header text (will be hidden for data rows) -->
        <TextView
            android:id="@+id/ops_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPS"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Button and Date (will be hidden for header row) -->
        <LinearLayout
            android:id="@+id/ops_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_check_ops"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#1ABC9C"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white"
                app:iconSize="24dp"
                android:text=""
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/ops_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="27-03-2024"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>