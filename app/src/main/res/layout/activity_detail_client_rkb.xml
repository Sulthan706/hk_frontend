                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SWEEPING"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
            <LinearLayout
