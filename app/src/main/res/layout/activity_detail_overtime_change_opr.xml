<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.service.overtime.ui.operator.activity.DetailOvertimeChangeOprActivity">

    <include
        android:id="@+id/appbarDetailOvertimeChangeOpr"
        layout="@layout/app_bar_default" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarDetailOvertimeChangeOpr">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll1_detailOvertimeChangeOpr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/bg_white_card"
                android:elevation="@dimen/_6sdp"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_titleDetailOvertimeChangeOpr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Error Title"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tv_dateDetailOvertimeChangeOpr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Date"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_shiftDetailOvertimeChangeOpr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Shift"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_locationDetailOvertimeChangeOpr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Area"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_subLocDetailOvertimeChangeOpr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Subarea"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2_detailOvertimeChangeOpr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ll1_detailOvertimeChangeOpr">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Pembuat Lembur Ganti :"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/bg_white_card"
                    android:elevation="@dimen/_6sdp"
                    android:padding="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_createdDetailOvertimeChangeOpr"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:civ_border_color="@android:color/darker_gray"
                        app:civ_border_width="@dimen/_1sdp"
                        tools:src="@drawable/foto1" />

                    <TextView
                        android:id="@+id/tv_createdDetailOvertimeChangeOpr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@id/iv_createdDetailOvertimeChangeOpr"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error name"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3_detailOvertimeChangeOpr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ll2_detailOvertimeChangeOpr">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Menggantikan :"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/bg_white_card"
                    android:elevation="@dimen/_6sdp"
                    android:padding="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_employeeDetailOvertimeChangeOpr"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:civ_border_color="@android:color/darker_gray"
                        app:civ_border_width="@dimen/_1sdp"
                        tools:src="@drawable/foto1" />

                    <TextView
                        android:id="@+id/tv_employeeDetailOvertimeChangeOpr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@id/iv_employeeDetailOvertimeChangeOpr"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error name"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4_detailOvertimeChangeOpr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ll3_detailOvertimeChangeOpr">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Digantikan oleh :"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/bg_white_card"
                    android:elevation="@dimen/_6sdp"
                    android:padding="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_replaceDetailOvertimeChangeOpr"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:civ_border_color="@android:color/darker_gray"
                        app:civ_border_width="@dimen/_1sdp"
                        tools:src="@drawable/foto1" />

                    <TextView
                        android:id="@+id/tv_replaceDetailOvertimeChangeOpr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@id/iv_replaceDetailOvertimeChangeOpr"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error name"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll5_detailOvertimeChangeOpr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ll4_detailOvertimeChangeOpr">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Alasan lembur"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/bg_white_card"
                    android:elevation="@dimen/_6sdp"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_descDetailOvertimeChangeOpr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Error"
                        android:textColor="@color/neutral100"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                app:layout_constraintTop_toBottomOf="@id/ll5_detailOvertimeChangeOpr"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>