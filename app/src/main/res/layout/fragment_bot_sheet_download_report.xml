<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:id="@+id/ivCloseBottomFotoAreaInspeksi"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_close_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1BottomFotoAreaInspeksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Pilih Tanggal"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/llChooseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv1BottomFotoAreaInspeksi"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai dari"
            android:fontFamily="@font/poppinsregular"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sampai"
            android:fontFamily="@font/poppinsregular"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/llChooseDate">
        <TextView
            android:id="@+id/tvStartdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pilih tanggal"
            android:fontFamily="@font/poppinsregular"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_line_grey"
            android:layout_marginRight="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/tvEnddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih tanggal"
            android:fontFamily="@font/poppinsregular"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_line_grey"
            />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAppliedBottomSubmit"
        android:text="Terapkan"
        android:fontFamily="@font/poppinssemibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/llSelectedDate"
        android:layout_marginTop="67dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/secondary_color"
        android:visibility="visible"/>






</androidx.constraintlayout.widget.ConstraintLayout>