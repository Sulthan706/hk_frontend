<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:paddingHorizontal="@dimen/_20sdp"
    android:paddingTop="15dp"
    android:paddingBottom="190dp">

    <View
        android:id="@+id/viewBotProject"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_bottomsheet_grey"
        android:layout_marginHorizontal="150dp"
        />
    <TextView
        android:id="@+id/tvTitleInformationResign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Keterangan dari atasan"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewBotProject"/>
    <!--    content-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/my_textarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan resign"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleInformationResign"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvReasonResignVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textMultiLine"
            android:lines="6"
            android:gravity="top"/>

    </com.google.android.material.textfield.TextInputLayout>










</androidx.constraintlayout.widget.ConstraintLayout>