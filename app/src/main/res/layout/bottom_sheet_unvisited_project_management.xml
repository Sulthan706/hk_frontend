<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/_20sdp"
    android:background="@drawable/bottom_sheets_background_white"
    android:orientation="vertical">

    <View
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_rounded_grey"/>

    <TextView
        android:id="@+id/tv1BottomUnvisitedProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/poppinsmedium"
        android:text="Unvisited Project"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_11ssp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#d9d9d9"/>

    <TextView
        android:id="@+id/tvDateBottomUnvisitedProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Today, error"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Remaining : "
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:id="@+id/tvRemainingBottomUnvisitedProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="- project"
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBottomUnvisitedProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        tools:listitem="@layout/item_list_visit_project_management"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBottomUnvisitedProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="Change Plan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:background="@drawable/bg_primary"
        android:layout_gravity="center" />

</LinearLayout>