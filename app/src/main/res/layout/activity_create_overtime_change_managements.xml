<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.service.overtime.ui.activity.CreateOvertimeChangeManagementsActivity">

    <include
        android:id="@+id/appbarCreateOvertimeChangeManagement"
        layout="@layout/app_bar_default"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbarCreateOvertimeChangeManagement"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llChooseOvertime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Project"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="@dimen/_14ssp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menuProject"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih project"
                    app:endIconDrawable="@drawable/ic_chevron_down"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:layout_marginTop="2dp"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/acomFieldAdapterProjectManagement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/poppinsregular"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipe Lembur"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menuLembur"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih tipe lembur"
                    app:endIconDrawable="@drawable/ic_chevron_down"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:layout_marginTop="2dp"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/acomFieldAdapterTipeLemburManagement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:fontFamily="@font/poppinsregular"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/clOvertimeAlpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/llChooseOvertime">
                <View
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/viewSection1"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/_12sdp"
                    />

                <LinearLayout
                    android:id="@+id/llOvertimeReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/viewSection1"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alasan Lembur"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etOvertimeReason"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alasan Lembur"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:helperTextTextColor="@color/red"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/tvOvertimeReason"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:ems="10"
                            android:gravity="left|top"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="textMultiLine"
                            android:textSize="15sp"
                            android:scrollbars="vertical"
                            >

                        </EditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Lembur"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="15dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerDate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih tanggal"
                        app:endIconDrawable="@drawable/ic_calendar_orange"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp"
                        app:errorEnabled="true"
                        app:endIconTint="@color/primary_color"
                        app:helperTextTextColor="@color/red">

                        <AutoCompleteTextView
                            android:id="@+id/adapterDateOvertimeManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:fontFamily="@font/poppinsregular"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shift Lembur"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:layout_marginTop="15dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerShift"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih Shift"
                        app:endIconDrawable="@drawable/ic_chevron_down"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp"
                        app:errorEnabled="true"
                        app:helperTextTextColor="@color/red">

                        <AutoCompleteTextView
                            android:id="@+id/adapterSelectShiftManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="none"
                            android:paddingEnd="16dp"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Karyawan yang tidak hadir"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih nama karyawan yang perlu diganti"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="italic"
                        android:textSize="11sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerPosition"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih level jabatan"
                        app:endIconDrawable="@drawable/ic_chevron_down"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp"
                        app:errorEnabled="true"
                        app:helperTextTextColor="@color/red">

                        <AutoCompleteTextView
                            android:id="@+id/adapterSelectPositionManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="none"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerEmployeeName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cari nama karyawan"
                        app:endIconDrawable="@drawable/ic_chevron_down"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp"
                        app:errorEnabled="true"
                        app:helperTextTextColor="@color/red">

                        <AutoCompleteTextView
                            android:id="@+id/adapterSelectEmployeeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:fontFamily="@font/poppinsregular"

                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:id="@+id/viewSection2"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/background"
                    app:layout_constraintTop_toBottomOf="@+id/llOvertimeReason"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <LinearLayout
                    android:id="@+id/llReplacementOvertime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/viewSection2"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Digantikan oleh"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerChooseReplacementEmployee"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cari karyawan pengganti"
                        app:endIconDrawable="@drawable/ic_chevron_down"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp"
                        app:errorEnabled="true"
                        app:helperTextTextColor="@color/red">

                        <AutoCompleteTextView
                            android:id="@+id/adapterSelectReplacementEmployee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="none"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSummaryOvertime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/llReplacementOvertime"
                    android:background="@color/light_orange"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="12dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="24dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jadwal Lembur"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/primary_color"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tvSummaryOvertimeSchedule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppinssemibold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shift"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tvSummaryShift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppinssemibold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llSummaryArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Area"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tvSummaryArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppinssemibold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llSummarySubArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SubArea"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tvSummarySubArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppinssemibold"/>
                    </LinearLayout>


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmitAlpa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/llSummaryOvertime"
                    android:fontFamily="@font/poppinsregular"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="56dp"
                    android:textColor="@color/white"
                    android:text="Submit"
                    android:layout_marginBottom="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingVertical="17dp"
                    app:cornerRadius="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            resign-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/clOvertimeResign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/llChooseOvertime">
                <View
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/viewSection1s"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/_12sdp"
                    />

                <LinearLayout
                    android:id="@+id/llOvertimeReasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/viewSection1s"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alasan Lembur"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etUsernameProfiles"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:hint="Alasan Lembur"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
                        app:helperTextTextColor="@color/red"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/tvOvertimeReasons"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:ems="10"
                            android:gravity="left|top"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="textMultiLine"
                            android:textSize="15sp"
                            android:scrollbars="vertical"
                            android:maxLength="100"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Tanggal Lembur"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shift Lembur"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="@dimen/_14ssp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_4sdp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerDates"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih tanggal"
                            app:endIconDrawable="@drawable/ic_calendar_orange"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            android:layout_weight="1"
                            app:endIconTint="@color/primary_color"
                            android:layout_marginRight="@dimen/_4sdp">

                            <AutoCompleteTextView
                                android:id="@+id/adapterDateOvertimeManagements"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:inputType="none"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinnerShifts"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih Shift"
                            app:endIconDrawable="@drawable/ic_chevron_down"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_4sdp">

                            <AutoCompleteTextView
                                android:id="@+id/adapterSelectShiftManagements"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Karyawan yang Lembur"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="15dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerPositions"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih level jabatan"
                        app:endIconDrawable="@drawable/ic_chevron_down"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/adapterSelectPositionManagements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerEmployeeNames"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cari nama karyawan"
                        app:endIconDrawable="@drawable/ic_chevron_down"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        android:layout_marginTop="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/adapterSelectEmployeeNames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tvAreaResign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Area"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
