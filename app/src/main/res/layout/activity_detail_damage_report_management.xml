<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.damagereport.ui.activity.DetailDamageReportManagementActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/appbarDetailDamageReportManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/app_bar_default"/>


    </com.google.android.material.appbar.MaterialToolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <LinearLayout
                android:id="@+id/llDetailHeadDamageReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="32dp">

                <TextView
                    android:id="@+id/tvNumberBAK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="BAK/2024/02/0001"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvDateBAK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="15 Feb 2024"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:id="@+id/vwHeadContentDamageReportManagement"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/llDetailHeadDamageReport"/>
            <LinearLayout
                android:id="@+id/llDetailInfoDamageReoort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement"
                android:orientation="vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Mesin"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Projek"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tvProjectCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CF1MSNLOW_00001"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvEngineCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="CF1MSNLOW_00001"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Merek"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tvBrandEngine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CF1MSNLOW_00001"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tvTypeEngine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CF1MSNLOW_00001"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>



            </LinearLayout>
            <View
                android:id="@+id/vwHeadContentDamageReportManagement2"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/llDetailInfoDamageReoort"/>

            <LinearLayout
                android:id="@+id/llDamageReportContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement2"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:id="@+id/ivDamageReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_error_image"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/keterangan" />
                    <ProgressBar
                        android:id="@+id/progressIvDamageReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keterangan kerusakan"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/black"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etKeteranganDamageReportManagement"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                       >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvKeteranganDamageReportManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textMultiLine|textCapSentences"
                            android:lines="4"
                            android:scrollbars="vertical"
                            android:overScrollMode="always"
                            android:fontFamily="@font/poppinsregular"
                            android:focusable="false"/>

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            </LinearLayout>



            <View
                android:id="@+id/vwHeadContentDamageReportManagement3"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/llDamageReportContent"/>

            <TextView
                android:id="@+id/tvImageProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload foto penyelesaian"
                app:layout_constraintTop_toBottomOf="@id/vwHeadContentDamageReportManagement3"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"/>
            
            <LinearLayout
                android:id="@+id/llImageProgressContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvImageProgress"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="24dp">

                <RelativeLayout
                    android:id="@+id/rlBeforeBak"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_field_dotted_red">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:src="@drawable/ic_camera_fill"
                        android:backgroundTint="@color/red1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tampak Depan"
                        android:fontFamily="@font/poppinssemibold"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="@color/red1"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="60dp"/>
                </RelativeLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mvImageBeforeBak"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivBeforeBak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_error_image"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/keterangan" />

                    <ProgressBar
                        android:id="@+id/progressIvBeforeDamageReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"/>

                    <ImageButton
                        android:id="@+id/ivReplaceImageUploadBakBefore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_replace_image_light_blue"
                        android:background="@null"
                        android:layout_margin="5dp"
                        android:visibility="visible"/>

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/rlAfterBak"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_field_dotted_primary"
                    android:layout_marginStart="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:src="@drawable/ic_camera_fill"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Setelah perbaikan"
                        android:fontFamily="@font/poppinssemibold"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/red1"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="45dp"/>
                </RelativeLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mvImageAfterBak"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/ivAfterBak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_error_image"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/keterangan" />

                    <ProgressBar
                        android:id="@+id/progressIvAfterDamageReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"/>

                    <ImageButton
                        android:id="@+id/ivReplaceImageUploadBakAfter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_replace_image_light_blue"
                        android:background="@null"
                        android:layout_margin="5dp"
                        android:visibility="visible"/>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvSummaryDamageReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan Penyelesaian"
                app:layout_constraintTop_toBottomOf="@id/llImageProgressContent"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="22dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etSummaryResultDamageReport"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:hint="Beri keterangan setelah perbaikan"
                app:layout_constraintTop_toBottomOf="@+id/tvSummaryDamageReport">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvSubmitReportDamageReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine|textCapSentences"
                    android:lines="4"
                    android:maxLength="50"
                    android:scrollbars="vertical"
                    android:overScrollMode="always"
                    android:fontFamily="@font/poppinsregular"/>

            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:id="@+id/vwHeadContentDamageReportManagement4"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="20dp"
                android:background="@color/grey1"
                app:layout_constraintTop_toBottomOf="@+id/etSummaryResultDamageReport"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisableBakManagement"
                android:layout_width="366dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:cornerRadius="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/gray"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitBakManagement"
                android:layout_width="366dp"
                android:visibility="gone"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/vwHeadContentDamageReportManagement4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:cornerRadius="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>