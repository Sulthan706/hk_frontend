<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/appbar_detailStaff"
            layout="@layout/app_bar_default" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerDetailStaffTl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/appbar_detailStaff">

            <include layout="@layout/shimmer_placeholder_detail_tl" />


        </com.facebook.shimmer.ShimmerFrameLayout>

        <ImageView
            android:id="@+id/iv_staffImgDetailTl"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/gray_dark"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_detailStaff" />

        <LinearLayout
            android:id="@+id/ll_detailStaffTl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/iv_staffImgDetailTl"
            app:layout_constraintTop_toBottomOf="@id/appbar_detailStaff">

            <TextView
                android:id="@+id/tv_staffNameDetailTl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Error name"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_staffPositionDetailTl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Error job"
                android:textColor="@color/neutral80"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_detailStaffTl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_24sdp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_staffImgDetailTl">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Kode Plotting"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_plottingDetailTl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Kode Plotting"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Area"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_areaDetailTl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Area"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Sub Area"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_subAreaDetailTl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Sub Area"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Shift"
                    android:textColor="@color/neutral80"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_shiftDetailTl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Error Shift"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Status Penilaian"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_statusPenilaianDetailTl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Error Status Penilaian"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_lihatDac"
                android:layout_marginTop="8dp"
                android:background="#DEDEDE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Daily Activity"
                android:textColor="@color/neutral100"
                android:textSize="@dimen/_14ssp" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerDacDetailStaffTl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_shimmer_cardview" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_shimmer_cardview" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_shimmer_cardview" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dacDetailStaffTl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll_detailStaffTl2" />

        <FrameLayout
            android:id="@+id/fl_checklistDetailTl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_detailStaff" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kirimDacChecklist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/btn_disable"
            android:fontFamily="@font/poppinsregular"
            android:text="Kirim ke Supervisor"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rv_dacDetailStaffTl" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            app:layout_constraintTop_toBottomOf="@id/btn_kirimDacChecklist" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>