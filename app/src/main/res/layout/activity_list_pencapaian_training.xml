<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_client.training.ui.activity.ListPencapaianTrainingActivity">
    <include
        android:id="@+id/appbarAgendaTraining"
        layout="@layout/appbar_default_with_search_client_primary" />
    <TextView
        android:id="@+id/tvTitleListPencapaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbarAgendaTraining"
        android:layout_margin="@dimen/_10sdp"
        android:text="Pilih nama karyawan untuk melihat laporan training"
        android:fontFamily="@font/poppinsregular"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleListPencapaian"
        android:layout_margin="@dimen/_10sdp"
        tools:listitem="@layout/item_fab_history_attendance_person"/>
</androidx.constraintlayout.widget.ConstraintLayout>