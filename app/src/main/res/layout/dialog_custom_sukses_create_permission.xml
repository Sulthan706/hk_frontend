<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_18sdp"
    app:cardCornerRadius="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_20sdp">

        <ImageView
            android:id="@+id/ivCloseDialogSuksesCreatePermission"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close_bottom_sheet"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_120sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/success_create_permission" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berhasil terkirim"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/green1"
            android:fontFamily="@font/poppinssemibold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppinsregular"
            android:text="Permohonanmu telah dikirim ke Pengawas atau manajemen untuk selanjutnya diproses terlebih dahulu"
            android:textAlignment="center"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>