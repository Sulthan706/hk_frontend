<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:id="@+id/ivBtnCloseBottomCftalk"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_close_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleChooseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Filter by"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvChooseStatusComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleChooseDate"
        android:text="Pilih status absensi"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="@dimen/_3sdp">

    </TextView>
    <RadioGroup
        android:id="@+id/rgRadioBtnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvChooseStatusComplaint"
        android:checkedButton="@id/rbAllStatus">
        <RadioButton
            android:id="@+id/rbPerfect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Perfect (100%)"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_field_tranparent_grey"/>
        <RadioButton
            android:id="@+id/rbAlmostPerfect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Menuju perfect (71% - 99%)"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_field_tranparent_grey"/>

        <RadioButton
            android:id="@+id/rbNeedImprovement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_margin="4dp"
            android:background="@drawable/bg_field_tranparent_grey"
            android:fontFamily="@font/poppinsregular"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Perlu ditingkatkan (60% - 70%)"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbUnder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Under ( &lt; 60%)"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_field_tranparent_grey"/>

    </RadioGroup>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAppliedBottomChooseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="85dp"
        android:background="@drawable/bg_secondary_new"
        android:fontFamily="@font/poppinsmedium"
        android:text="Terapkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@+id/rgRadioBtnStatus" />





</androidx.constraintlayout.widget.ConstraintLayout>