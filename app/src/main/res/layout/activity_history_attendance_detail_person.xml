<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.attendance_fix.ui.activity.midlevel.new_.HistoryAttendanceDetailPerson">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/layoutAppbarHistoryAttendancePerson"
            layout="@layout/app_bar_default" />


    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/tvDisplayAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tampilkan laporan absensi untuk:"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_82sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"/>
    <LinearLayout
        android:id="@+id/llNameStatusAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayAttendance"
        android:background="@drawable/bg_field"
        android:layout_marginHorizontal="@dimen/_12ssp"
        android:padding="@dimen/_4ssp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_already_attendance"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/foto1"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_margin="@dimen/_4sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp">

            <TextView
                android:id="@+id/tvEmployeeNameHistoryP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Ops"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"
                android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/tvJobNucEmployeeHistoryP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Ops"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginRight="@dimen/_3ssp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llBtnSelectMonthAndYear"
        app:layout_constraintTop_toBottomOf="@+id/llNameStatusAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12ssp">

        <RelativeLayout
            android:id="@+id/rvDateDetailPerson"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_rectangle_blue_attendance"
            android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_20ssp"
                    android:layout_marginRight="@dimen/_12ssp"
                    android:layout_marginBottom="@dimen/_2ssp"
                    android:fontFamily="@font/poppinsregular"
                    android:src="@drawable/ic_chevron_downn" />

               <Spinner
                   android:id="@+id/spinnerFabDetailMonth"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@android:color/transparent"
                   />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rvBtnYearDetail"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_rectangle_blue_attendance"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp">

            <Spinner
                android:id="@+id/spinnerFabDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_20ssp"
                android:layout_marginRight="@dimen/_12ssp"
                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsregular"
                android:src="@drawable/ic_chevron_downn" />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary"
        app:layout_constraintTop_toBottomOf="@+id/llBtnSelectMonthAndYear"
        android:layout_marginTop="@dimen/_34ssp"
        android:layout_marginHorizontal="@dimen/_12ssp">

        <TextView
            android:id="@+id/tvBtnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:paddingVertical="@dimen/_10ssp"
            android:text="Submit"
            android:textColor="@color/white" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>