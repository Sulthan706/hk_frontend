<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".features.features_vendor.homescreen.monthlyworkreport.ui.fragment.BotSheetCreateBAFragment">

    <View
        android:id="@+id/viewBotSheetBa"
        android:layout_width="32dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_field_disable"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvtitleBotSheetBa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewBotSheetBa"
        android:text="Berita Acara Pengalihan"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="24dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtitleBotSheetBa"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/ivCreateBaVendorEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera_black"
            android:padding="30dp"
            android:background="@color/grey1"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/ivCreateBaVendor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera_black"/>




        <!--        <ProgressBar-->
        <!--            android:id="@+id/progressBarRkb"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:padding="10dp" />-->

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCaptionBotSheetBa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Jelaskan secara singkat mengenai kendala yang dialami"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etBaReason"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:hint="Tuliskan alasanmu di sini"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCaptionBotSheetBa"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:helperTextEnabled="true">

        <EditText
            android:id="@+id/tvBaReason"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:ems="10"
            android:fontFamily="@font/poppinsregular"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="15sp"
            android:maxLength="200">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etDateCreateBa"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="pilih tanggal pengalihan"
        app:endIconDrawable="@drawable/ic_calendar_orange"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etBaReason"
        app:endIconTint="@color/primary_color"
        android:layout_marginHorizontal="24dp"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color">

        <AutoCompleteTextView
            android:id="@+id/tvDateCreateDateBa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitCreateBaDisable"
        android:visibility="visible"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etDateCreateBa"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:text="Submit"
        android:backgroundTint="@color/grey2"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:paddingVertical="13dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/btnSubmitCreateBa"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etDateCreateBa"
        android:gravity="center"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:text="Submit"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:paddingVertical="13dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
