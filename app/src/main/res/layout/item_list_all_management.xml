<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginStart="16dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImageUserManagement"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logo_careops"
                    />
                <TextView
                    android:id="@+id/tvNameManagementLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="User Management"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/secondary_color"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar_bod"/>
                <TextView
                    android:id="@+id/tvDateManagementLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="9 Oktober 2023, 17:10 WIB"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black3"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gps_bod"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tvAddressManagementLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black3"
                    android:textSize="12sp"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>