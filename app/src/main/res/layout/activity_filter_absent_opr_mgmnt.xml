<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.homescreen.attendanceOpr.ui.activity.FilterAbsentOprMgmntActivity">

    <include
        android:id="@+id/appbarFilterAbsentOprMgmnt"
        layout="@layout/app_bar_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/appbarFilterAbsentOprMgmnt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bulan"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/neutral100"
            android:fontFamily="@font/poppinsmedium"/>

        <Spinner
            android:id="@+id/spinnerMonthFilterAbsentOprMgmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_spinner"
            android:spinnerMode="dropdown"
            android:entries="@array/noChoose"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Cabang"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/neutral100"
            android:fontFamily="@font/poppinsmedium"/>

        <Spinner
            android:id="@+id/spinnerBranchFilterAbsentOprMgmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_spinner"
            android:spinnerMode="dropdown"
            android:entries="@array/noChoose"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Project"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/neutral100"
            android:fontFamily="@font/poppinsmedium"/>

        <Spinner
            android:id="@+id/spinnerProjectFilterAbsentOprMgmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_spinner"
            android:spinnerMode="dropdown"
            android:entries="@array/noChoose"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Jabatan"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/neutral100"
            android:fontFamily="@font/poppinsmedium"/>

        <Spinner
            android:id="@+id/spinnerJobRoleFilterAbsentOprMgmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_spinner"
            android:spinnerMode="dropdown"
            android:entries="@array/noChoose"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>