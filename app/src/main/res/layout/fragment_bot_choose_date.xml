<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:id="@+id/ivBtnCloseBottomCftalk"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_close_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleChooseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Filter by"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
        android:id="@+id/rgRadioBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleChooseDate"
        android:layout_marginTop="32dp"
        >
        <RadioButton
            android:id="@+id/rbAllDates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Semua tanggal"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_field_tranparent_grey"
            />
        <RadioButton
            android:id="@+id/rbChooseDates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Pilih tanggal sendiri"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_field_tranparent_grey"
            />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/llDateSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rgRadioBtn"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulai dari"
                android:fontFamily="@font/poppinsregular"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sampai"
                android:fontFamily="@font/poppinsregular"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tvStartdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pilih tanggal"
                android:fontFamily="@font/poppinsregular"
                android:layout_weight="1"
                android:drawableBottom="@drawable/ic_line_grey"
                android:layout_marginRight="@dimen/_4sdp"/>
            <TextView
                android:id="@+id/tvEnddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih tanggal"
                android:fontFamily="@font/poppinsregular"
                android:layout_weight="1"
                android:drawableBottom="@drawable/ic_line_grey"
                />
        </LinearLayout>


    </LinearLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAppliedBottomSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_secondary_new"
        android:fontFamily="@font/poppinsmedium"
        android:text="Terapkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@+id/rgRadioBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAppliedBottomSubmitDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_secondary_new"
        android:fontFamily="@font/poppinsmedium"
        android:text="Terapkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@+id/rgRadioBtn"
        android:visibility="gone"/>





</androidx.constraintlayout.widget.ConstraintLayout>