<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_client.setting.ui.activity.ChangePassClientActivity">

    <include
        android:id="@+id/appbar_change_pass_client"
        layout="@layout/app_bar_profile_client"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pass_old_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Password Lama"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar_change_pass_client" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_pass_old_client"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:hint="Password Lama"
        app:layout_constraintTop_toBottomOf="@+id/tv_pass_old_client">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pass_olds_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv_pass_new_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Password Baru"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass_old_client" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_pass_new_client"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:hint="Password Baru"
        app:layout_constraintTop_toBottomOf="@+id/tv_pass_new_client">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pass_news_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv_pass_new_confirm_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Ulangi Password Baru"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass_new_client" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_pass_new_confirm_client"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:hint="Ulangi Password Baru"
        app:layout_constraintTop_toBottomOf="@+id/tv_pass_new_confirm_client">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pass_new_confirms_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>