<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <include
        android:id="@+id/layout_appbar"
        layout="@layout/app_bar_default" />

    <LinearLayout
        android:id="@+id/llNotifMidCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_appbar"
        android:orientation="horizontal"
        android:background="@drawable/bg_field_notif"
        android:gravity="center"
        android:elevation="@dimen/_4sdp"
        android:visibility="visible">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvCatNotifIzin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_transparent_notif_mid"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingHorizontal="@dimen/_22sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Izin"
                    android:textColor="@color/black"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tvCatNotifLembur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_transparent_notif_mid"
                    android:text="Lembur"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingHorizontal="@dimen/_11sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/_4sdp"/>
                <TextView
                    android:id="@+id/tvCatNotifCtalk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_transparent_notif_mid"
                    android:text="CTalk"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingHorizontal="@dimen/_19sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tvCatNotifCftalk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_transparent_notif_mid"
                    android:text="CFTalk"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingHorizontal="@dimen/_17sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvEmptyStateNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tidak Ada Notifikasi"
        android:fontFamily="@font/poppinsregular"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llNotifMidCategories"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeHistoryNotification"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llNotifMidCategories">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNotificationHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_notification_history"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</androidx.constraintlayout.widget.ConstraintLayout>