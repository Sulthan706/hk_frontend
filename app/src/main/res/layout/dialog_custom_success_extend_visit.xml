<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_18sdp"
    app:cardCornerRadius="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_20sdp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationSuccessResponse"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_120sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/success_create_permission" />

        <TextView
            android:id="@+id/tvSuccessExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berhasil Perpanjang Durasi"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/green1"
            android:fontFamily="@font/poppinssemibold"/>

        <TextView
            android:id="@+id/tvInfoExtendVisitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppinsregular"
            android:text="error info"
            android:textAlignment="center"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tvTimeExtendVisitDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:text="00:00"
            android:textColor="@color/black2"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/poppinsbold"
            android:background="@drawable/bg_field"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnExtendVisitDuration"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Kembali"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            android:background="@drawable/bg_secondary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>