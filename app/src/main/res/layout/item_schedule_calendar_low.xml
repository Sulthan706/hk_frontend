<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F6F8"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_attendance_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:background="#F5F6F8"
        android:maxHeight="@dimen/_125sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="0.35"
                app:cardBackgroundColor="@color/grayLine"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sch_day"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:fontFamily="@font/poppinsbold"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_color"
                        android:textSize="@dimen/_20ssp"
                        tools:text="6" />

                    <TextView
                        android:id="@+id/tv_sch_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_color"
                        android:textSize="@dimen/_12ssp"
                        tools:text="Jan" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1.65"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:id="@+id/ll_sch_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_sch_shift"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:fontFamily="@font/poppinsbold"
                            android:gravity="left"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            tools:text="Shift Pagi" />

                        <TextView
                            android:id="@+id/tv_sch_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.05"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="right"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp"
                            tools:text="Lantai 1" />
                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_sch_time"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:text="07:00 - 08:00" />

                        <TextView
                            android:gravity="right"
                            android:id="@+id/tv_sch_sub_area"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp"
                            tools:text="Toilet 2" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
