<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/iv_appbar_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_appbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        tools:text="JUDUL appbarAAA"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_2sdp"/>

    <RelativeLayout
        android:id="@+id/rlBtnAllComplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_field_transparent_white"
        android:paddingHorizontal="31dp"
        android:paddingVertical="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_2sdp">
        <TextView
            android:id="@+id/tvBtnSeeAllComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lihat semua"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>