<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_420sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bg_custom_dialog"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_5sdp">

    <ImageView
        android:id="@+id/ivCloseDialogProject"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_close_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svDialogProject"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:theme="@style/SearchViewAppbarGrey"
        android:background="@drawable/bg_field"
        app:iconifiedByDefault="false"
        app:queryHint="Cari project..."
        app:searchIcon="@drawable/ic_search_grey"
        app:searchHintIcon="@drawable/ic_search_grey"
        app:closeIcon="@drawable/ic_close_grey"
        app:layout_constraintTop_toBottomOf="@id/ivCloseDialogProject"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListProject"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_6sdp"
        tools:listitem="@layout/list_project"
        app:layout_constraintTop_toBottomOf="@id/svDialogProject"
        app:layout_constraintBottom_toTopOf="@id/btnListProject"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnListProject"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Pilih"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:background="@drawable/bg_primary"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/rvListProject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNoDataListProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Tidak ada data."
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/grayTxt"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/svDialogProject"/>

</androidx.constraintlayout.widget.ConstraintLayout>