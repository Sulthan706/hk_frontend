<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/bg_white_card"
    android:elevation="@dimen/_4sdp">

    <RelativeLayout
        android:id="@+id/rl_statusOperatorMyTeam"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_status_history_complaint_secondary"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_statusOperatorMyTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_4sdp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_countAbsentOperatorMyTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_toEndOf="@id/ll"
        android:drawableEnd="@drawable/ic_people_grey"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:text="0 / 0"
        android:textColor="@color/neutral100"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_fotoUserTimku"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/foto1" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/rl_statusOperatorMyTeam"
        android:layout_toEndOf="@id/iv_fotoUserTimku"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userNameOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:maxLines="2"
            android:text="Error Name"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_areaOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Error Area"
            android:textColor="@color/neutral100"
            android:textSize="@dimen/_10ssp" />


        <TextView
            android:id="@+id/tv_subAreaOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Error Sub Area"
            android:textColor="@color/neutral80"
            android:textSize="@dimen/_8ssp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_lihatDac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fotoUserTimku"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_next_grey"
        android:fontFamily="@font/poppinsmedium"
        android:text="Lihat DAC"
        android:textColor="@color/blueTxt"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone" />

</RelativeLayout>