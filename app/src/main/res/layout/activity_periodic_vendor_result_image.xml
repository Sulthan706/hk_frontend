<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_vendor.homescreen.monthlyworkreport.ui.activity.PeriodicVendorResultImageActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImagePeriodicUpload"
        android:layout_width="370dp"
        android:layout_height="500dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:id="@+id/ivResultImagePeriodicVendorEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey1"
            android:src="@drawable/ic_camera_black"
            android:padding="90dp"/>

        <ImageView
            android:id="@+id/ivResultImagePeriodicVendor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey2"
            android:visibility="gone"/>
        <ProgressBar
            android:id="@+id/progressBarImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etCommentPeriodicUploadImage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:hint="Comments"
        app:layout_constraintTop_toBottomOf="@+id/cvImagePeriodicUpload">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvCommentPeriodicVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="15" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/btnSubmitPeriodic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etCommentPeriodicUploadImage"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Submit"
        app:cornerRadius="8dp"
        android:paddingVertical="10dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitPeriodicDisable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey2"
        app:layout_constraintTop_toBottomOf="@+id/etCommentPeriodicUploadImage"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Submit"
        app:cornerRadius="8dp"
        android:paddingVertical="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>