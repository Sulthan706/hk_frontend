<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/iv_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/bg_field"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivshimmer1"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="4dp"
                android:src="@drawable/bg_shimmer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/ivshimmer1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/secondary_color"
                    android:textSize="@dimen/_12ssp"
                    android:background="@drawable/bg_shimmer"/>

                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp"
                    android:background="@drawable/bg_shimmer"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_field"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivshimmer2"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="4dp"
                android:src="@drawable/bg_shimmer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/ivshimmer2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/secondary_color"
                    android:textSize="@dimen/_12ssp"
                    android:background="@drawable/bg_shimmer"/>

                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/neutral100"
                    android:textSize="@dimen/_14ssp"
                    android:background="@drawable/bg_shimmer"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_24sdp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_shimmer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/bg_shimmer"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="#DEDEDE" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>