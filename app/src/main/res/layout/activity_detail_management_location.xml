<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.features_management.shareloc.ui.activity.bod.DetailManagementLocationActivity">

    <include
        android:id="@+id/appBarHistoryLocManagementBod"
        layout="@layout/app_bar_default"/>
    <LinearLayout
        android:id="@+id/llProfileManagementHistoryLocationBod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarHistoryLocManagementBod">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImageUserManagement"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logo_cf"
            />
        <TextView
            android:id="@+id/tvNameManagementAllLocationBod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="User Management"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginStart="10dp"
            android:textColor="@color/secondary_color"
            android:textSize="14sp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMonthHistoryLocManagementBod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/llProfileManagementHistoryLocationBod">
        <TextView
            android:id="@+id/tvGetMonthNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="month"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black"
            app:layout_collapseMode="parallax"/>
        <LinearLayout
            android:id="@+id/llWeeklyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_green_dot"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Catatan lokasi terakhir"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="11sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/calenderHistorLocManagementBod"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/clMonthHistoryLocManagementBod"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="@color/white"
        app:compactCalendarTextColor="@color/black"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/primary_color"
        app:compactCalendarCurrentDayBackgroundColor="@color/grey1"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        android:layout_marginHorizontal="24dp"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarDisplayOtherMonthDays="true"
        app:layout_collapseMode="parallax"
        />
    <LinearLayout
        android:id="@+id/llSelectedManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/calenderHistorLocManagementBod"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calender_orange_bod"
                />
            <TextView
                android:id="@+id/tvDateManagementAllLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="9 Oktober 2023, 17:10 WIB"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="10dp"
                android:textColor="@color/black3"
                android:textSize="12sp"
                android:layout_marginEnd="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_maps_orange_bod"/>

            <TextView
                android:id="@+id/tvAddressAllManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black3"
                android:textSize="12sp"
                tools:text="Mall Kota Kasablanka
Jl. Raya Casablanca, Menteng Dalam, Kec. Tebet, Kota Jakarta Selatan, Daerah Khusus Ibukota Jakarta 12870"
                android:layout_marginEnd="24dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvEmptyLocationShareLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/calenderHistorLocManagementBod"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Tidak ditemukan data lokasi pada tanggal ini"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsregular"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>