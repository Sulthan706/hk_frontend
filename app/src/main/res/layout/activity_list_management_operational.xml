<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp">

        <include
            android:id="@+id/appBarWithSearchEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/app_bar_default_with_search"/>


    </com.google.android.material.appbar.MaterialToolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:id="@+id/rlManpowerTotalManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_2sdp"
        android:paddingVertical="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_25ssp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clManpowerTotalEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/ivManpowerManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_manpower_management"/>
            <TextView
                app:layout_constraintLeft_toRightOf="@+id/ivManpowerManagement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total MP Aktif"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/tvTotalMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000 MP"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16sp"
                android:textColor="@color/secondary_color"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/clManpowerTotalEmployee">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_lightblue_attendance"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OM"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/secondary_color"
                        android:textSize="11sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvCountOm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/secondary_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_lightblue_attendance"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GM"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/secondary_color"
                        android:textSize="11sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvCountGm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/secondary_color"
                        />
                </LinearLayout>


            </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListJobRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        tools:listitem="@layout/list_tabmenu_jobrole"
        app:layout_constraintTop_toBottomOf="@+id/rlManpowerTotalManagement"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerListAllOperational"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_12sdp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/rvListJobRole">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp" />

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp" />

            <include
                layout="@layout/shimmer_placeholder_operational_listalloperational"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ListAllOperational"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:visibility="gone"
        tools:listitem="@layout/list_all_operational"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvListJobRole" />

    <FrameLayout
        android:id="@+id/fl_ListAllOperationalNoData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rvListJobRole"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/fragment_no_data" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Tidak ada data."
        android:textAlignment="center"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/grayTxt"
        android:fontFamily="@font/poppinsmedium"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rvListJobRole"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_ListAllOperationalNoInternet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            android:id="@+id/layoutConnectionTimeout"
            layout="@layout/fragment_connection_timeout" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>