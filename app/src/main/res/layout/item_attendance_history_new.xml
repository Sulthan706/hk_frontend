<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_attendance_daily"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:maxHeight="125dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_time_item_daily_attendance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1.2"
            android:autoSizeMaxTextSize="@dimen/paragraphText"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:textSize="@dimen/_9ssp"
            tools:text="Tanggal" />

        <TextView
            android:id="@+id/tv_history_checkin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="0.8"
            android:autoSizeMaxTextSize="@dimen/paragraphText"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:textSize="@dimen/_9ssp"
            tools:text="Masuk" />

        <TextView
            android:id="@+id/tv_history_checkout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="0.8"
            android:autoSizeMaxTextSize="@dimen/paragraphText"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:textSize="@dimen/_9ssp"
            tools:text="Keluar" />

        <TextView
            android:id="@+id/tv_history_project"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1.2"
            android:autoSizeMaxTextSize="@dimen/paragraphText"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:textSize="@dimen/_9ssp"
            tools:text="Project" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>