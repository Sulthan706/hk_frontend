<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheets_background_white"
    android:orientation="vertical"
    tools:context=".features.features_management.homeScreenUpdated.humanCapital.ui.fragment.SubmitRatingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:background="@color/white"
        android:elevation="@dimen/_4sdp"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rounded_grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Give Rating &amp; Feedback"
            android:textAlignment="center"
            android:textColor="@color/black2"
            android:textSize="@dimen/_13ssp"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llSubmitRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMonthYearSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:text="November 2024"
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinssemibold"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_primary_soft5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Overall Performance"
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginHorizontal="@dimen/_16sdp"/>

        <RatingBar
            android:id="@+id/ratingBarSubmitRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:numStars="5"
            android:stepSize="1"
            android:progressTint="#FFCC00"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/tvDefaultRateSubmitRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:text="Your rate"
            android:textColor="@color/grayTxt"
            android:textSize="@dimen/_11ssp"
            android:textStyle="italic"
            android:fontFamily="@font/poppinsregular"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llRateSubmitRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRate1SubmitRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor  "
                android:textColor="@color/red1"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic"
                android:fontFamily="@font/poppinsbold"/>

            <TextView
                android:id="@+id/tvRate2SubmitRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Needs significant improvement"
                android:textColor="@color/black2"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic"
                android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Feedback"
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginHorizontal="@dimen/_16sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_feedback_submit_rating"
            android:textColor="@color/black2"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginHorizontal="@dimen/_16sdp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etFeedbackSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/bg_field"
            android:hint="write your feedback here"
            android:textColor="@color/black2"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="start"
            android:maxLength="250"/>

        <TextView
            android:id="@+id/tvCharactersSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/250 characters"
            android:textAlignment="textEnd"
            android:textColor="@color/blue5"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="visible"
            android:id="@+id/btnDisableSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinssemibold"
            android:background="@drawable/btn_disable"/>

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/btnSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinssemibold"
            android:background="@drawable/btn_primary"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llEmptySubmitRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifEmptySubmitRating"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/empty_rating"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:text="@string/empty_submit_rating"
            android:textAlignment="center"
            android:textColor="@color/black2"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"/>

</LinearLayout>