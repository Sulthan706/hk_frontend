<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".features.features_management.homescreen.attendanceOpr.ui.activity.ListProjectAbsentOprMgmntActivity">

    <include
        android:id="@+id/appbarListProjectAbsentOprMgmnt"
        layout="@layout/app_bar_default_with_search" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerListProjectAbsentOprMgmnt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarListProjectAbsentOprMgmnt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_placeholder_project_list" />

            <include layout="@layout/shimmer_placeholder_project_list" />

            <include layout="@layout/shimmer_placeholder_project_list" />

            <include layout="@layout/shimmer_placeholder_project_list" />

            <include layout="@layout/shimmer_placeholder_project_list" />

            <include layout="@layout/shimmer_placeholder_project_list" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeListProjectAbsentOprMgmnt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/appbarListProjectAbsentOprMgmnt"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListProjectAbsentOprMgmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:listitem="@layout/list_project"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/fl_NoInternetListProjectAbsentOprMgmnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            android:id="@+id/layoutConnectionTimeout"
            layout="@layout/fragment_connection_timeout" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>