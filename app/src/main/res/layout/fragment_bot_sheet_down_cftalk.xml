<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheets_background_white"
    android:padding="@dimen/_18sdp">

    <ImageView
        android:id="@+id/ivBtnCloseBottomCftalk"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_close_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleChooseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Report Komplain"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvChooseStatusComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleChooseDate"
        android:text="Pilih level pembuat komplain"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="@dimen/_3sdp">

    </TextView>
    <RadioGroup
        android:id="@+id/rgRadioBtnCftalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvChooseStatusComplaint"
        >

        <RadioButton
            android:id="@+id/rbInternalCftalk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_margin="4dp"
            android:background="@drawable/bg_field_tranparent_grey"
            android:fontFamily="@font/poppinsregular"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Internal area (pengawas)"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbManajemenCftalk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Manajemen"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_field_tranparent_grey"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tvNotesDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes_download1"
        android:textColor="@color/blue2"
        android:fontFamily="@font/poppinsregular"
        android:textSize="11sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rgRadioBtnCftalk"/>
    <TextView
        android:id="@+id/tvNotes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes_download2"
        android:textColor="@color/blue2"
        android:fontFamily="@font/poppinsregular"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/tvNotesDownload"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDownloadReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="137dp"
        android:background="@drawable/bg_secondary_new"
        android:fontFamily="@font/poppinsmedium"
        android:text="Download File"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@+id/tvNotes2" />
    <com.mackhartley.roundedprogressbar.RoundedProgressBar
        android:id="@+id/progressRounded"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:rpbBackgroundColor="@color/secondary_color"
        app:rpbBackgroundTextColor="@color/white"
        app:rpbCornerRadiusTopRight="16dp"
        app:rpbProgressColor="@color/grey1"
        app:rpbCornerRadius="16dp"
        app:rpbProgressTextColor="@color/black"
        app:rpbTextPadding="12dp"
        app:rpbTextSize="12sp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/btnDownloadReport"
        android:visibility="invisible"/>





</androidx.constraintlayout.widget.ConstraintLayout>